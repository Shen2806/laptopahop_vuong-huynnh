                        <script>
                            (function () {
                                var uid = '<%= _UID %>';
                                var wrap = document.getElementById('desc-wrapper-' + uid);
                                var btn = document.getElementById('toggle-desc-' + uid);
                                if (!wrap || !btn) return;

                                var MAX = 320; // phải khớp CSS .ldesc--collapsed

                                function updateButtonVisibility() {
                                    // Nếu nội dung dài hơn MAX -> hiện nút; ngắn -> ẩn
                                    // +4 đề phòng sai số layout
                                    var needMore = wrap.scrollHeight > (MAX + 4);
                                    btn.style.display = needMore ? 'inline-block' : 'none';
                                    // Đặt lại text đúng theo trạng thái hiện tại
                                    btn.textContent = wrap.classList.contains('ldesc--collapsed')
                                        ? (btn.getAttribute('data-collapsed-text') || 'Xem thêm')
                                        : (btn.getAttribute('data-expanded-text') || 'Thu gọn');
                                }

                                btn.onclick = function () {
                                    if (wrap.classList.contains('ldesc--collapsed')) {
                                        wrap.classList.remove('ldesc--collapsed');
                                        btn.textContent = btn.getAttribute('data-expanded-text') || 'Thu gọn';
                                    } else {
                                        wrap.classList.add('ldesc--collapsed');
                                        btn.textContent = btn.getAttribute('data-collapsed-text') || 'Xem thêm';
                                        try { wrap.scrollIntoView({ block: 'nearest', behavior: 'smooth' }); } catch (e) { }
                                    }
