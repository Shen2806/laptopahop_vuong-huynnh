                        const b = document.getElementById('chatMiniBadge');
                        if (b) b.classList.add('d-none');
                    }
                    function closeCard() {
                        $card.classList.add('leaving');
                        $card.addEventListener('transitionend', () => {
                            $card.classList.remove('leaving', 'enter');
                            $card.classList.add('d-none');
                        }, { once: true });
                    }

                    // Nếu bạn đã gán click open/close ở file JS cũ, có thể bỏ addEventListener dưới.
                    // Hoặc giữ cũng được (không hại), vì chỉ chèn thêm hiệu ứng.
                    $open.addEventListener('click', openCard);
                    $close.addEventListener('click', closeCard);

                    // Khi nhận sự kiện "chat:closed" từ server, khóa input (nếu bạn đã làm, bỏ qua)
                    const input = document.getElementById('chatInput');
                    const formBtn = document.querySelector('#chatForm button');
                    window.setClosedUI = function () {
                        if (input) input.disabled = true;
                        if (formBtn) formBtn.disabled = true;
                    };
                })();
            </script>

            <!-- render sao  -->
            <script>
                (() => {
                    // ---- Boot ----
                    const boot = document.getElementById('boot');
                    const PRODUCT_ID = Number(boot?.dataset?.productId || 0);
                    const CURRENT_USER_ID = boot?.dataset?.userId ? Number(boot.dataset.userId) : null;

                    // ---- DOM ----
                    const $topStars = document.getElementById('productRatingStars');
                    const $topCount = document.getElementById('productRatingCount');
                    const $avgStars = document.getElementById('avgStars');
                    const $ratingCount = document.getElementById('ratingCount');
                    const $reviewList = document.getElementById('reviewList');
                    const $reviewForm = document.getElementById('reviewForm');
                    const $ratingStars = document.getElementById('ratingStars');

                    // ---- helpers ----
                    const escapeHtml = (s = '') =>
                        s.replace(/[&<>"']/g, c => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#39;' }[c]));
                    function starsHtml(val) {
                        const v = Number(val || 0);
                        let out = '';
                        for (let i = 1; i <= 5; i++) {
                            if (v >= i) out += '<i class="fas fa-star text-warning"></i>';
                            else if (v >= i - 0.5) out += '<i class="fas fa-star-half-alt text-warning"></i>';
                            else out += '<i class="far fa-star text-secondary"></i>';
                        }
                        return out;
                    }
                    function renderSummary(sum = { avg: 0, count: 0 }) {
                        const avg = Number(sum.avg || 0), count = Number(sum.count || 0);
                        if ($topStars) $topStars.innerHTML = starsHtml(avg);
                        if ($topCount) $topCount.textContent = `(${count} đánh giá)`;
                        if ($avgStars) $avgStars.innerHTML = `${starsHtml(avg)} <span class="ms-2">${avg.toFixed(1)}/5</span>`;
                        if ($ratingCount) $ratingCount.textContent = `${count} lượt đánh giá`;
                    }
                    async function loadSummary() {
                        let sum = null;
                        try {
                            const r = await fetch(`/api/products/${PRODUCT_ID}/reviews/summary`);
                            if (r.ok) sum = await r.json();
                        } catch { }
                        if (!sum) {
                            try {
                                const r2 = await fetch(`/api/products/${PRODUCT_ID}/meta`);
                                if (r2.ok) {
                                    const d = await r2.json();
                                    sum = { avg: d.ratingAvg || 0, count: d.ratingCount || 0 };
                                }
                            } catch { }
                        }
                        renderSummary(sum || { avg: 0, count: 0 });
                    }
                    function renderReviewList(list = []) {
                        if (!$reviewList) return;
                        $reviewList.innerHTML = list.map(r => `
      <div class="border rounded p-2 mb-2">
        <div class="d-flex align-items-center mb-1">
          <strong class="me-2">${escapeHtml(r.user?.fullName || r.user?.name || r.user?.username || 'Ẩn danh')}</strong>
          <span>${starsHtml(r.rating)}</span>
          <small class="text-muted ms-2">${new Date(r.createdAt).toLocaleString('vi-VN')}</small>
        </div>
        <div>${escapeHtml(r.comment || '')}</div>
      </div>
    `).join('');
                    }
                    async function loadReviews() {
                        const r = await fetch(`/api/products/${PRODUCT_ID}/reviews`);
                        const list = r.ok ? await r.json() : [];
                        renderReviewList(list);
                        // nếu đã có review của tôi -> khóa form + fill lại sao/comment
                        if ($reviewForm && $ratingStars) {
                            const mine = list.find(x => Number(x.user?.id) === Number(CURRENT_USER_ID));
                            if (mine) {
                                paintInteractive(mine.rating);
                                const ta = $reviewForm.querySelector('textarea[name="comment"]');
                                if (ta) ta.value = mine.comment || '';
                                disableForm();
                            }
                        }
                    }

                    // ---- sao tương tác ----
                    let selectedRating = 5;
                    function paintInteractive(r = selectedRating) {
                        selectedRating = Number(r) || 5;
                        if (!$ratingStars) return;
                        $ratingStars.innerHTML = Array.from({ length: 5 }, (_, i) => {
                            const n = i + 1;
                            return `<i data-star="${n}" class="${n <= selectedRating ? 'fas' : 'far'} fa-star ${n <= selectedRating ? 'text-warning' : 'text-secondary'}" style="cursor:pointer"></i>`;
                        }).join('');
                    }
                    if ($ratingStars) {
                        paintInteractive(5);
                        // event delegation: click ở icon hoặc svg con đều bắt được
                        $ratingStars.addEventListener('click', (e) => {
                            const el = e.target.closest?.('[data-star]');
                            if (!el) return;
                            paintInteractive(Number(el.getAttribute('data-star')));
                        });
                    }
                    function disableForm() {
                        if (!$reviewForm) return;
                        $reviewForm.querySelector('button')?.setAttribute('disabled', 'true');
                        $reviewForm.querySelectorAll('textarea, input').forEach(el => el.setAttribute('disabled', 'true'));
                        if ($ratingStars) $ratingStars.style.pointerEvents = 'none';
                    }

                    // ---- submit (ONLY ONE handler) ----
                    if ($reviewForm) {
                        $reviewForm.addEventListener('submit', async (e) => {
                            e.preventDefault();
                            const comment = ($reviewForm.querySelector('textarea[name="comment"]')?.value || '').trim();

                            const resp = await fetch(`/api/products/${PRODUCT_ID}/reviews`, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ rating: selectedRating, comment }),
                            });

                            // đọc JSON nếu có
                            let payload = null;
                            const ct = resp.headers.get('content-type') || '';
                            if (ct.includes('application/json')) {
                                try { payload = await resp.json(); } catch { }
                            }

                            if (resp.status === 409) { // đã có review
                                disableForm();
                                await loadReviews();
                                await loadSummary();
                                return;
                            }
                            if (!resp.ok) {
                                console.error('POST /reviews failed', resp.status, await resp.text().catch(() => ''));
                                // Không alert nữa để tránh báo lỗi giả
                                return;
                            }

                            disableForm();
                            await loadReviews();
                            if (payload?.summary) renderSummary(payload.summary);
                            else await loadSummary();
                        }, { once: true }); // tránh bị bind trùng lần 2
                    }

                    // ---- init ----
                    loadSummary();
                    loadReviews();
                })();
            </script>

            <!-- admin có thể trả lời -->
            <script>
                (() => {
                    const boot = document.getElementById('boot');
                    const PRODUCT_ID = Number(boot?.dataset?.productId || 0);
                    const USER_ID = boot?.dataset?.userId ? Number(boot.dataset.userId) : null;
                    const IS_AUTH = (boot?.dataset?.isAuth || '0') === '1';

                    const $qaList = document.getElementById('qaList');
                    const $qaForm = document.getElementById('qaForm');

                    const esc = (s = '') => s.replace(/[&<>"']/g, c => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#39;' }[c]));

                    const tpl = (q) => {
                        const name = esc(q.user?.name || `User #${q.user?.id || ''}`);
                        const avatar = q.user?.avatar ? `/images/${q.user.avatar}` : '/images/default-avatar.png';
                        const at = new Date(q.createdAt).toLocaleString('vi-VN');
                        const hasRep = q.replies && q.replies.length > 0;
                        const rep = hasRep ? q.replies[0] : null;
                        const repHtml = hasRep
                            ? `<div class="mt-2 ps-3 border-start">
           <div class="small text-success fw-semibold"><i class="fas fa-user-shield me-1"></i>Admin</div>
           <div>${esc(rep.content)}</div>
           <div class="small text-muted">${new Date(rep.createdAt).toLocaleString('vi-VN')}</div>
         </div>`
                            : `<div class="mt-2 small text-muted fst-italic">Đang chờ phản hồi từ Admin...</div>`;
                        return `
      <div class="border rounded p-2 mb-2" data-qid="${q.id}">
        <div class="d-flex align-items-center gap-2">
          <img src="${avatar}" style="width:28px;height:28px;border-radius:50%;object-fit:cover;">
          <strong>${name}</strong>
          <small class="text-muted">${at}</small>
        </div>
        <div class="mt-1">${esc(q.content)}</div>
        ${repHtml}
      </div>`;
                    };

                    async function loadQA() {
                        const r = await fetch(`/api/products/${PRODUCT_ID}/questions`);
                        const data = r.ok ? await r.json() : [];
                        $qaList.innerHTML = data.map(tpl).join('') || '<div class="text-muted">Chưa có câu hỏi nào.</div>';
                    }

                    // Submit (1 lần, có chặn double)
                    if ($qaForm && !$qaForm.dataset.bound) {
                        $qaForm.dataset.bound = '1';
                        let busy = false;
                        $qaForm.addEventListener('submit', async (e) => {
                            e.preventDefault();
                            if (busy) return; busy = true;
                            const ta = $qaForm.querySelector('textarea[name="content"]');
                            const btn = $qaForm.querySelector('button');
                            const content = (ta?.value || '').trim();
                            if (!content) { busy = false; return; }
                            btn?.setAttribute('disabled', 'true');
                            try {
                                const r = await fetch(`/api/products/${PRODUCT_ID}/questions`, {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ content })
                                });
                                if (!r.ok) {
                                    const j = await r.json().catch(() => ({ message: 'Gửi thất bại' }));
                                    alert(j.message || 'Gửi thất bại');
                                } else {
                                    const q = await r.json();
                                    $qaList.insertAdjacentHTML('afterbegin', tpl(q));
                                    ta.value = '';
                                }
                            } finally {
                                btn?.removeAttribute('disabled');
                                busy = false;
                            }
                        });
                    }

                    // Socket: join user room & nghe trả lời
                    try {
                        const s = (window.__CHAT_SOCKET__ ||= io());
                        if (USER_ID) s.emit('join-user-room', USER_ID);

                        s.off('qa:answer_available');         // tránh đăng ký trùng
                        s.on('qa:answer_available', (p) => {
                            if (Number(p.productId) === PRODUCT_ID) loadQA();
                        });
                    } catch { }

                    // init
                    loadQA();
                })();
            </script>




