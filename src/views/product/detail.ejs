                                updateButtonVisibility();                   // 1) lúc DOM sẵn
                                window.addEventListener('load', updateButtonVisibility); // 2) sau khi ảnh/load xong
                                if ('ResizeObserver' in window) {            // 3) nếu nội dung thay đổi kích thước
