                        // 1) Toggle active tức thì (UI feedback)
                        ul.querySelectorAll('.page-item').forEach(el => el.classList.remove('active'));
                        li.classList.add('active');

                        // 2) Nếu dùng AJAX, thêm data-ajax-pagination="true" vào <ul class="pagination pager ...">
                        const ajaxMode = ul.dataset.ajaxPagination === 'true';
                        if (!ajaxMode) return;         // điều hướng bình thường (full reload)

                        // 3) AJAX mode: chặn chuyển trang, cập nhật URL & load lại list
                        e.preventDefault();
                        const url = a.getAttribute('href');
                        history.pushState({}, '', url);

                        // Gọi renderer của bạn – thay bằng logic hiện có để load danh sách + phân trang
                        loadProducts(url);             // bạn đã có hàm fetch/axios nào thì gọi ở đây
