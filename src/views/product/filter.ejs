                                                            <span class="ls-rating d-inline-flex align-items-center"
                                                                style="--w:<%- _pct %>"
                                                                title="<%= _avg.toFixed(1) %>/5">
                                                                <span class="ms-1 small text-muted">(<%= _count %>
                                                                        )</span>
                                                            </span>
                                                        </div>

