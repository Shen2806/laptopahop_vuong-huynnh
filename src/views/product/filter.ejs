                                                                    <% if (s==='half' ) { %><i
                                                                            class="fas fa-star-half-alt"></i>
                                                                        <% } %>
                                                                            <% if (s==='empty' ) { %><i
                                                                                    class="far fa-star"></i>
                                                                                <% } %>
                                                                                    <% }); %>
