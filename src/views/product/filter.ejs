                        // Khai bao cac nhom va param key tren URL
                        var GROUP_IDS = [
                            'factoryFilter', 'targetFilter', 'priceFilter', 'cpuFilter', 'ramFilter',
                            'storageFilter', 'resFilter', 'screenFilter', 'sortFilter'
                        ];
                        function getEl(id) { return document.getElementById(id); }
                        function getKey(el) { return el ? el.getAttribute('data-param') : null; }

                        function syncUIFromURL() {
                            var url = new URL(window.location.href);
                            GROUP_IDS.forEach(function (id) {
                                var wrap = getEl(id);
                                if (!wrap) return;
                                var key = getKey(wrap);
                                if (!key) return;

                                if (id === 'sortFilter') {
                                    var def = wrap.getAttribute('data-default') || '';
                                    var v = url.searchParams.get(key);
                                    var target = v || def;
                                    var r = wrap.querySelector('input[type="radio"][value="' + target + '"]');
                                    if (r) r.checked = true;
                                    // neu khong co radio tuong ung thi bo het
                                    if (!r) wrap.querySelectorAll('input[type="radio"]').forEach(function (n) { n.checked = false; });
                                } else {
                                    var values = url.searchParams.getAll(key);
                                    wrap.querySelectorAll('input[type="checkbox"]').forEach(function (inp) {
                                        inp.checked = values.indexOf(inp.value) !== -1;
                                    });
                                }
                            });
                        }

                        function collectSelectionsFromUI() {
                            var sel = {};
                            GROUP_IDS.forEach(function (id) {
                                var wrap = getEl(id);
                                if (!wrap) return;
                                var key = getKey(wrap);
                                if (!key) return;

                                if (id === 'sortFilter') {
                                    var def = wrap.getAttribute('data-default') || '';
                                    var r = wrap.querySelector('input[type="radio"]:checked');
                                    var val = r ? r.value : '';
                                    if (val && val !== def) sel[key] = [val];
                                } else {
                                    var arr = [];
                                    wrap.querySelectorAll('input[type="checkbox"]:checked').forEach(function (inp) { arr.push(inp.value); });
                                    if (arr.length) sel[key] = arr;
                                }
                            });
                            return sel;
                        }

                        function collectSelectionsFromURL() {
                            var url = new URL(window.location.href);
                            var sel = {};
                            GROUP_IDS.forEach(function (id) {
                                var wrap = getEl(id);
                                if (!wrap) return;
                                var key = getKey(wrap);
                                if (!key) return;

                                if (id === 'sortFilter') {
                                    var v = url.searchParams.get(key);
                                    if (v) sel[key] = [v];
                                } else {
                                    var arr = url.searchParams.getAll(key);
                                    if (arr && arr.length) sel[key] = arr;
                                }
                            });
                            return sel;
                        }

                        function sameSelections(a, b) {
                            var ka = Object.keys(a).sort().join('|');
                            var kb = Object.keys(b).sort().join('|');
                            if (ka !== kb) return false;
                            for (var k in a) {
                                var av = (a[k] || []).slice().sort().join('|');
                                var bv = (b[k] || []).slice().sort().join('|');
                                if (av !== bv) return false;
                            }
                            return true;
                        }

                        function updateApplyState() {
                            var ui = collectSelectionsFromUI();
                            var url = collectSelectionsFromURL();
                            if (sameSelections(ui, url)) applyBtn.setAttribute('disabled', 'disabled');
                            else applyBtn.removeAttribute('disabled');
                        }

                        function clearAllUI() {
                            GROUP_IDS.forEach(function (id) {
                                var wrap = getEl(id);
                                if (!wrap) return;
                                wrap.querySelectorAll('input[type="checkbox"]').forEach(function (inp) { inp.checked = false; });
                                if (id === 'sortFilter') {
                                    var def = wrap.getAttribute('data-default') || '';
                                    var rDef = def ? wrap.querySelector('input[type="radio"][value="' + def + '"]') : null;
                                    if (rDef) rDef.checked = true;
                                    else wrap.querySelectorAll('input[type="radio"]').forEach(function (r) { r.checked = false; });
                                } else {
                                    wrap.querySelectorAll('input[type="radio"]').forEach(function (r) { r.checked = false; });
                                }
                            });
                        }

                        function applySelections(sel) {
                            var url = new URL(window.location.href);
                            url.searchParams.delete('page');
                            // xoa toan bo key filter
                            GROUP_IDS.forEach(function (id) {
                                var wrap = getEl(id);
                                if (!wrap) return;
                                var key = getKey(wrap);
                                if (key) url.searchParams.delete(key);
                            });
                            // append lai cac gia tri da chon
                            Object.keys(sel).forEach(function (key) {
                                sel[key].forEach(function (v) { url.searchParams.append(key, v); });
                            });

                            if (ajaxMode && typeof window.loadProducts === 'function') {
                                history.pushState({}, '', url);
                                window.loadProducts(String(url));
                            } else {
                                window.location.assign(String(url));
                            }
                        }

                        // Lắng nghe thay đổi trong các nhóm để bật/tắt nút áp dụng
                        GROUP_IDS.forEach(function (id) {
                            var wrap = getEl(id);
                            if (!wrap) return;
                            wrap.addEventListener('change', updateApplyState);
                        });

                        // Nút "Xoa tat ca": chỉ clear UI, không áp dụng
                        clearAllBtn.addEventListener('click', function () {
                            clearAllUI();
                            updateApplyState();
                        });

                        // Nút "Xem ket qua": build URL tu UI va apply
                        applyBtn.addEventListener('click', function () {
                            var selections = collectSelectionsFromUI();
                            applySelections(selections);
                        });

                        // Khi mo modal: dong bo UI voi URL, cap nhat trang thai nut
                        modal.addEventListener('shown.bs.modal', function () {
                            syncUIFromURL();
                            updateApplyState();
                        });

                        // Fallback AJAX neu data-ajax="true" ma chua co loadProducts
                        if (ajaxMode && typeof window.loadProducts !== 'function') {
                            window.loadProducts = async function (url) {
                                try {
                                    var res = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                                    var html = await res.text();
                                    var doc = new DOMParser().parseFromString(html, 'text/html');
                                    var newList = doc.querySelector('#product-list');
                                    var newPager = doc.querySelector('#product-pagination');
                                    if (newList) document.querySelector('#product-list')?.replaceWith(newList);
                                    if (newPager) document.querySelector('#product-pagination')?.replaceWith(newPager);
                                } catch (e) { console.error(e); }
                            };
                        }
                    })();
                </script>



