    let sec = total;
    const label = document.getElementById('countdown');
    const bar = document.getElementById('thanksProgress');
    if (!label || !bar) return;

    function paint(){
      label.textContent = sec;
      const done = (total - sec) / total * 100;
      bar.style.width = done + '%';
    }
    paint();

    const id = setInterval(() => {
      sec--;
      if (sec <= 0) {
        clearInterval(id);
        window.location.href = '/';
      } else {
        paint();
      }
    }, 1000);
  })();

