<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <title>Thông tin tài khoản</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Fonts & Icons -->
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Bootstrap & Base -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet">
    <link href="/client/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/client/css/profiles/profile.css">

</head>

<body>
    <!-- Spinner -->
    <div id="spinner"
        class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>

    <!-- Header -->
    <%- include('../layout/header'); -%>

        <!-- Toast -->
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <div id="notifyToast" class="toast align-items-center text-white bg-success border-0" role="alert"
                aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body" id="notifyToastBody">Thông báo</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>

        <!-- Account layout -->
        <div class="container account-shell">
            <div class="row g-4">
                <!-- Sidebar -->
                <aside class="col-lg-4">
                    <div class="acc-card acc-sidebar">
                        <div class="avatar-wrap">
                            <img class="avatar"
                                src="<%= user.avatar ? '/images/' + user.avatar : 'https://via.placeholder.com/120x120?text=Avatar' %>"
                                alt="avatar">
                            <div class="name">
                                <%= user.fullName || 'Người dùng' %>
                            </div>
                            <div class="email">
                                <%= user.username || '' %>
                            </div>
                            <div class="verify-badges mt-1">
                                <span class="badge bg-success">Email ✓</span>
                                <!-- nếu chưa xác minh bạn có thể đổi thành badge bg-secondary -->
                            </div>
                        </div>

                        <div class="p-2 acc-menu">
                            <div class="list-group">
                                <a class="list-group-item active" data-bs-toggle="tab" href="#tab-profile"><i
                                        class="bi bi-person"></i> Hồ sơ</a>
                                <a class="list-group-item" data-bs-toggle="tab" href="#tab-security"><i
                                        class="bi bi-shield-lock"></i> Bảo mật</a>
                                <a class="list-group-item" data-bs-toggle="tab" href="#tab-noti"><i
                                        class="bi bi-bell"></i> Thông báo</a>
                                <a class="list-group-item" data-bs-toggle="tab" href="#tab-orders"><i
                                        class="bi bi-bag"></i> Đơn hàng</a>
                            </div>
                        </div>
                    </div>
                </aside>

                <!-- Content -->
                <section class="col-lg-8">
                    <div class="acc-card acc-content">
                        <div class="tab-content">

                            <!-- TAB: Hồ sơ (GIỮ LOGIC GỐC) -->
                            <div class="tab-pane fade show active" id="tab-profile">
                                <h5 class="section-title mb-3">Hồ sơ của tôi</h5>
                                <div class="form-card">
                                    <form action="/profile/update" method="POST" enctype="multipart/form-data">
                                        <div class="mb-3 text-center">
                                            <img id="avatarPreview" class="preview-avatar shadow"
                                                src="<%= user.avatar ? '/images/' + user.avatar : 'https://via.placeholder.com/120x120?text=Avatar' %>"
                                                alt="avatar">
                                            <div class="mt-3">
                                                <input type="file" id="avatar" name="avatar" class="form-control">
                                            </div>
                                        </div>

                                        <div class="row g-3">
                                            <div class="col-md-12">
                                                <label class="form-label fw-semibold"><strong>Họ và tên</strong></label>
                                                <input type="text" name="fullName" class="form-control"
                                                    value="<%= user.fullName %>" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label fw-semibold"><strong>Số điện
                                                        thoại</strong></label>
                                                <input type="text" name="phone" class="form-control"
                                                    value="<%= user.phone || '' %>" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label fw-semibold"><strong>Email</strong></label>
                                                <input type="text" class="form-control"
                                                    value="<%= user.username || '' %>" disabled>
                                            </div>
                                            <div class="col-12">
                                                <label class="form-label fw-semibold"><strong>Địa chỉ</strong></label>
                                                <textarea name="address" class="form-control" rows="3"
                                                    required><%= user.address || '' %></textarea>
                                            </div>
                                        </div>

                                        <div class="d-grid mt-3">
                                            <button type="submit" class="btn btn-success btn-lg"><i
                                                    class="bi bi-save me-1"></i> Cập nhật</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- /TAB: Hồ sơ -->

                            <!-- TAB: Bảo mật (UI only, không chạm server) -->
                            <div class="tab-pane fade" id="tab-security">
                                <h5 class="section-title mb-3">Bảo mật & đăng nhập</h5>

                                <div class="form-card mb-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="fw-bold">Đổi mật khẩu</div>
                                            <div class="text-muted small">Khuyến nghị tối thiểu 10 ký tự, có chữ hoa, số
                                                & ký tự đặc biệt.</div>
                                        </div>
                                        <button class="btn btn-success-soft" data-bs-toggle="modal"
                                            data-bs-target="#changePwdModal">
                                            <i class="bi bi-key me-1"></i> Đổi mật khẩu
                                        </button>
                                    </div>
                                </div>

                                <div class="form-card">
                                    <div class="fw-bold mb-2">Xác thực 2 lớp (2FA)</div>
                                    <div class="text-muted small mb-3">Bảo vệ tài khoản của bạn bằng OTP qua ứng dụng
                                        Authenticator.</div>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-outline-secondary btn-sm" disabled>Bật 2FA (sắp
                                            có)</button>
                                        <button class="btn btn-outline-secondary btn-sm" disabled>Tạo mã dự
                                            phòng</button>
                                    </div>
                                </div>
                            </div>
                            <!-- /TAB: Bảo mật -->

                            <!-- TAB: Thông báo (localStorage) -->
                            <div class="tab-pane fade" id="tab-noti">
                                <h5 class="section-title mb-3">Thông báo</h5>
                                <div class="form-card">
                                    <div class="switch-row">
                                        <div>
                                            <div class="fw-bold">Khuyến mãi</div>
                                            <div class="text-muted small">Nhận thông báo khi có deal hấp dẫn.</div>
                                        </div>
                                        <div class="form-check form-switch m-0">
                                            <input class="form-check-input" type="checkbox" id="nt-promo">
                                        </div>
                                    </div>
                                    <div class="switch-row">
                                        <div>
                                            <div class="fw-bold">Cập nhật đơn hàng</div>
                                            <div class="text-muted small">Xác nhận, vận chuyển, giao hàng…</div>
                                        </div>
                                        <div class="form-check form-switch m-0">
                                            <input class="form-check-input" type="checkbox" id="nt-order">
                                        </div>
                                    </div>
                                    <div class="switch-row">
                                        <div>
                                            <div class="fw-bold">Tin hệ thống</div>
                                            <div class="text-muted small">Bảo mật, thay đổi chính sách.</div>
                                        </div>
                                        <div class="form-check form-switch m-0">
                                            <input class="form-check-input" type="checkbox" id="nt-system">
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 mt-3">
                                    <button id="btnSaveNoti" class="btn btn-success"><i class="bi bi-save me-1"></i> Lưu
                                        lựa chọn</button>
                                    <button id="btnResetNoti" class="btn btn-outline-secondary">Mặc định</button>
                                </div>
                            </div>
                            <!-- /TAB: Thông báo -->

                            <!-- TAB: Đơn hàng -->
                            <div class="tab-pane fade" id="tab-orders">
                                <h5 class="section-title mb-3">Đơn hàng của tôi</h5>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-card h-100">
                                            <div class="fw-bold mb-1"><i class="bi bi-clock-history me-1"></i> Đơn gần
                                                đây</div>
                                            <div class="text-muted small">Xem tiến trình, đổi/hủy nếu còn thời hạn.
                                            </div>
                                            <a href="/order-user" class="btn btn-success-soft mt-2">Mở danh sách đơn</a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-card h-100">
                                            <div class="fw-bold mb-1"><i class="bi bi-receipt me-1"></i> Lịch sử mua
                                                hàng</div>
                                            <div class="text-muted small">Tất cả đơn đã hoàn tất/đã hủy.</div>
                                            <a href="/order-history" class="btn btn-success-soft mt-2">Xem lịch sử</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /TAB: Đơn hàng -->

                        </div>
                    </div>
                </section>
            </div>
        </div>

        <!-- Footer -->
        <%- include('../layout/footer'); -%>

            <!-- Modals -->
            <!-- Đổi mật khẩu (BACKEND) -->
            <div class="modal fade" id="changePwdModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <form class="modal-content" method="POST" action="/profile/change-password">
                        <div class="modal-header border-0">
                            <h5 class="modal-title">Đổi mật khẩu</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu hiện tại</label>
                                <input name="currentPassword" type="password" class="form-control"
                                    autocomplete="current-password" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật khẩu mới</label>
                                <input name="newPassword" type="password" class="form-control"
                                    autocomplete="new-password" minlength="6" required>
                            </div>
                            <div class="mb-1">
                                <label class="form-label">Nhập lại mật khẩu mới</label>
                                <input name="confirmPassword" type="password" class="form-control"
                                    autocomplete="new-password" minlength="6" required>
                            </div>
                            <small class="text-muted d-block mt-1">* Tối thiểu 6 ký tự. Khuyến nghị có chữ hoa, số & ký
                                tự đặc biệt.</small>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-key me-1"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>


            <!-- Thêm địa chỉ (UI only) -->
            <div class="modal fade" id="addAddressModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-0">
                            <h5 class="modal-title">Thêm địa chỉ</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                        </div>
                        <form onsubmit="return false;">
                            <div class="modal-body">
                                <div class="mb-2">
                                    <label class="form-label">Họ tên người nhận</label>
                                    <input type="text" class="form-control" value="<%= user.fullName || '' %>">
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="text" class="form-control" value="<%= user.phone || '' %>">
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Địa chỉ</label>
                                    <textarea class="form-control" rows="3"
                                        placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành"></textarea>
                                </div>
                                <small class="text-muted">* Demo UI – cần endpoint server để lưu.</small>
                            </div>
                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-outline-secondary"
                                    data-bs-dismiss="modal">Hủy</button>
                                <button type="button" class="btn btn-success" data-bs-dismiss="modal"
                                    onclick="showToastCountdown('Đã thêm địa chỉ (demo)',2)">Lưu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- JS -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/client/js/main.js"></script>

            <script>
                // Xem trước avatar
                (function () {
                    var input = document.getElementById("avatar");
                    if (!input) return;
                    input.addEventListener("change", function (e) {
                        var file = e.target.files && e.target.files[0];
                        if (file) {
                            var preview = document.getElementById("avatarPreview");
                            if (preview) preview.src = URL.createObjectURL(file);
                        }
                    });
                })();

                // Toast đếm ngược (giữ logic bạn đang dùng)
                function showToastCountdown(message, seconds) {
                    var toastEl = document.getElementById('notifyToast');
                    var toastBody = document.getElementById('notifyToastBody');
                    if (!toastEl || !toastBody) return;
                    var remaining = seconds || 3;
                    toastBody.textContent = message + " (đóng sau " + remaining + "s)";
                    var toast = bootstrap.Toast.getInstance(toastEl);
                    if (!toast) toast = new bootstrap.Toast(toastEl, { autohide: false });
                    toast.show();
                    var interval = setInterval(function () {
                        remaining--;
                        if (remaining > 0) {
                            toastBody.textContent = message + " (đóng sau " + remaining + "s)";
                        } else {
                            clearInterval(interval);
                            toast.hide();
                        }
                    }, 1000);
                }

                // Bắn toast nếu server set successMessage
                document.addEventListener("DOMContentLoaded", function () {
                    var successMessage = "<%= (typeof successMessage !== 'undefined' && successMessage) ? successMessage : '' %>";
                    if (successMessage) showToastCountdown(successMessage, 3);
                });

                // Thông báo: lưu localStorage
                (function () {
                    var KEY = 'vh_notify_prefs';
                    var $promo = document.getElementById('nt-promo');
                    var $order = document.getElementById('nt-order');
                    var $system = document.getElementById('nt-system');
                    if (!$promo || !$order || !$system) return;

                    function load() {
                        try {
                            var s = localStorage.getItem(KEY);
                            if (!s) return;
                            var v = JSON.parse(s);
                            $promo.checked = !!v.promo;
                            $order.checked = !!v.order;
                            $system.checked = !!v.system;
                        } catch (_) { }
                    }
                    function save() {
                        var v = { promo: $promo.checked, order: $order.checked, system: $system.checked };
                        localStorage.setItem(KEY, JSON.stringify(v));
                        showToastCountdown('Đã lưu tuỳ chọn thông báo', 2);
                    }
                    function reset() {
                        $promo.checked = true; $order.checked = true; $system.checked = true;
                        save();
                    }

                    load();
                    var btnSave = document.getElementById('btnSaveNoti');
                    var btnReset = document.getElementById('btnResetNoti');
                    if (btnSave) btnSave.addEventListener('click', save);
                    if (btnReset) btnReset.addEventListener('click', reset);
                })();
                function showToastCountdown(message, seconds, variant) {
                    var toastEl = document.getElementById('notifyToast');
                    var toastBody = document.getElementById('notifyToastBody');
                    if (!toastEl || !toastBody) return;

                    toastEl.classList.remove('bg-success', 'bg-danger');
                    toastEl.classList.add(variant === 'error' ? 'bg-danger' : 'bg-success');

                    var remaining = seconds || 3;
                    toastBody.textContent = message + " (đóng sau " + remaining + "s)";

                    var toast = bootstrap.Toast.getInstance(toastEl);
                    if (!toast) toast = new bootstrap.Toast(toastEl, { autohide: false });

                    toast.show();
                    var interval = setInterval(function () {
                        remaining--;
                        if (remaining > 0) {
                            toastBody.textContent = message + " (đóng sau " + remaining + "s)";
                        } else {
                            clearInterval(interval);
                            toast.hide();
                        }
                    }, 1000);
                }

                // Bắn toast nếu server set message
                document.addEventListener("DOMContentLoaded", function () {
                    var successMessage = "<%= (typeof successMessage !== 'undefined' && successMessage) ? successMessage : '' %>";
                    var errorMessage = "<%= (typeof errorMessage   !== 'undefined' && errorMessage)   ? errorMessage   : '' %>";

                    if (successMessage) {
                        showToastCountdown(successMessage, 3, 'success');
                    } else if (errorMessage) {
                        showToastCountdown(errorMessage, 4, 'error');
                        // Mở luôn tab Bảo mật để user thấy
                        var trigger = document.querySelector('[data-bs-toggle="tab"][href="#tab-security"]');
                        if (trigger) new bootstrap.Tab(trigger).show();
                    }
                });
            </script>
</body>

</html>