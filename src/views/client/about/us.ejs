<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <title>
        <%= typeof title !=='undefined' ? title : 'Giới thiệu' %>
    </title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta name="description" content="Giới thiệu về LaptopShop">

    <!-- Fonts & Icons -->
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap & Template -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet">
    <link href="/client/css/style.css" rel="stylesheet">
    <link href="/client/css/about/us.css" rel="stylesheet">
</head>

<body>
    <!-- HEADER START -->
    <div class="container-fluid shadow" style="margin-top: 10px">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <% if(user){ %>
                        <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i>
                            <a href="#" class="text-white">
                                <!-- <%= user?.address ?? "" %> -->
                                <%= user?.address || "" %>
                            </a>
                        </small>
                        <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i>
                            <a href="#" class="text-white">
                                <%= user?.username || "" %>
                            </a>
                        </small>
                        <% } else { %>
                            <small class="me-3"><i class="fas fa-voicemail me-2 text-secondary"></i>
                            </small>
                            <% } %>

                </div>
                <div class="top-link pe-2">
                    <a href="/terms" class="text-white"><small class="text-white mx-2">Điều khoản sử dụng</small>/</a>
                    <a href="/support" class="text-white"><small class="text-white mx-2">Hỗ trợ</small></a>
                </div>
            </div>
        </div>

        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <div>
                    <img src="/images/logo/logo.png" alt="LaptopShop" class="logo-circle">
                </div>
                <a href="/" class="navbar-brand">
                    <h1 class="text-primary display-6">LaptopShop</h1>
                </a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>

                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a href="/" class="nav-item nav-link ">Trang chủ</a>
                        <a href="/products" class="nav-item nav-link">Sản phẩm</a>
                        <a href="/about" class="nav-item nav-link active">Giới thiệu</a>
                        <a href="/contact" class="nav-item nav-link">Liên hệ</a>
                        <a href="/terms" class="nav-item nav-link " hidden>Điều khoản</a>
                        <a href="/blogs" class="nav-item nav-link">Blog</a>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="policyDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Thông tin và chính sách
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="policyDropdown">
                                <li><a class="dropdown-item" href="/warranty">Chính sách bảo hành</a></li>
                                <li><a class="dropdown-item" href="/return">Chính sách đổi trả</a></li>
                                <li><a class="dropdown-item" href="/privacy">Chính sách bảo mật</a></li>
                            </ul>
                        </li>
                    </div>

                    <!-- Icon giỏ hàng & account nằm trong navbar-collapse -->
                    <div class="d-flex ms-auto">
                        <a href="/cart" class="position-relative me-4 my-auto">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                            <span
                                class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1"
                                style="top: -5px; left: 15px; height: 20px; min-width: 20px;" id="sumCart">
                                <%= user?.sumCart ?? 0%>
                            </span>
                        </a>
                        <% if(user){ %>
                            <div class="dropdown my-auto">
                                <a href="#" class="dropdown" role="button" id="dropdownMenuLink"
                                    data-bs-toggle="dropdown" aria-expanded="false" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end p-4" aria-labelledby="dropdownMenuLink">
                                    <li class="d-flex align-items-center flex-column" style="min-width: 300px;">
                                        <img style="width: 150px; height: 150px; border-radius: 50%; overflow: hidden;"
                                            src="/images/<%= user.avatar %>" />
                                        <div class="text-center my-3">
                                            <%= user.fullName %>
                                        </div>
                                    </li>

                                    <li><a class="dropdown-item" href="/profile">Thông tin cá nhân</a></li>
                                    <li><a class="dropdown-item" href="/order-history">Lịch sử mua hàng</a></li>
                                    <li><a class="dropdown-item" href="/order-user">Đơn hàng của tôi</a></li>

                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <form method="post" action="/logout">
                                            <button class="dropdown-item">Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                            <% }else { %>
                                <a href="/login" class="a-login">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>
                                <% } %>



                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- HEADER END -->

    <div class="container my-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Giới thiệu</li>
            </ol>
        </nav>

        <div class="container my-4">
  <div class="about-hero rounded-4 overflow-hidden mb-4">
    <div class="about-hero__overlay"></div>
    <div class="about-hero__content">
      <h1 class="about-title mb-2" style="color: white;">LaptopShop – Chọn đúng máy, làm đúng việc</h1>
      <p class="about-subtitle mb-0">
        Tư vấn chuẩn nhu cầu • Sản phẩm chính hãng • Hậu mãi tận tâm
      </p>
    </div>
  </div>

  <div class="row g-4">
    <!-- USP / Lý do chọn -->
    <div class="col-lg-7">
      <div class="card border-0 shadow-sm rounded-4 h-100">
        <div class="card-body p-4">
          <h2 class="section-title mb-3">Về chúng tôi</h2>
          <p class="text-muted mb-4">
            LaptopShop cung cấp laptop <strong>chính hãng</strong> từ phổ thông đến cao cấp,
            tối ưu cho <em>học tập</em>, <em>làm việc</em>, <em>gaming</em> và <em>đồ họa</em>.
            Chúng tôi đặt trải nghiệm khách hàng lên hàng đầu với quy trình tư vấn minh bạch và nhanh gọn.
          </p>

          <div class="row g-3">
            <div class="col-sm-6">
              <div class="about-badge">
                <i class="fas fa-shield-check"></i>
                <div>
                  <h6>100% chính hãng</h6>
                  <p class="mb-0">Hóa đơn/VAT đầy đủ, nguồn gốc rõ ràng.</p>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="about-badge">
                <i class="fas fa-rotate"></i>
                <div>
                  <h6>Đổi trả minh bạch</h6>
                  <p class="mb-0">Hỗ trợ đổi máy theo chính sách rõ ràng.</p>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="about-badge">
                <i class="fas fa-headset"></i>
                <div>
                  <h6>Tư vấn tận tâm</h6>
                  <p class="mb-0">Đề xuất cấu hình đúng nhu cầu, không “độn giá”.</p>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="about-badge">
                <i class="fas fa-screwdriver-wrench"></i>
                <div>
                  <h6>Kỹ thuật chuyên nghiệp</h6>
                  <p class="mb-0">Cài đặt & bảo dưỡng trọn đời theo chính sách.</p>
                </div>
              </div>
            </div>
          </div>

          <hr class="my-4">

          <h5 class="mb-2">Sứ mệnh</h5>
          <p class="text-muted mb-0">
            Đưa công nghệ đến gần mọi người hơn bằng <strong>sản phẩm chuẩn – giá hợp lý – dịch vụ sau bán chu đáo</strong>.
          </p>
        </div>
      </div>
    </div>

    <!-- Stats / Con số & CTA -->
    <div class="col-lg-5">
      <div class="card border-0 shadow-sm rounded-4 h-100">
        <div class="card-body p-4">
          <div class="row g-3 text-center">
            <div class="col-6">
              <div class="about-stat">
                <span class="num">12K+</span>
                <span class="label">Khách hài lòng</span>
              </div>
            </div>
            <div class="col-6">
              <div class="about-stat">
                <span class="num">1.5K+</span>
                <span class="label">Mẫu máy sẵn hàng</span>
              </div>
            </div>
            <div class="col-6">
              <div class="about-stat">
                <span class="num">4.8/5</span>
                <span class="label">Điểm đánh giá</span>
              </div>
            </div>
            <div class="col-6">
              <div class="about-stat">
                <span class="num">24/7</span>
                <span class="label">Hỗ trợ kỹ thuật</span>
              </div>
            </div>
          </div>

          <div class="mt-4">
            <a href="/products" class="btn btn-primary w-100 rounded-pill">
              <i class="fas fa-laptop me-2"></i> Khám phá sản phẩm
            </a>
          </div>

          <div class="about-trust mt-4">
            <img src="https://tse4.mm.bing.net/th/id/OIP.4z7M7fJn3mFIqRWL86b6jAAAAA?rs=1&pid=ImgDetMain&o=7&rm=3" alt="Dell" >
            <img src="https://th.bing.com/th/id/R.5610b8718a9bff516be8aa06ccd33b5a?rik=uD4%2fFMGgjRUCiQ&riu=http%3a%2f%2f4.bp.blogspot.com%2f-fujNYRuB408%2fUNnM6P4gL2I%2fAAAAAAAACTw%2fLNewRBEm8zY%2fs1600%2flenovo-logo.jpg&ehk=rAolH2X4%2f8bE1VYoghVCPUWh9IMokwePr5qMwOloAy8%3d&risl=&pid=ImgRaw&r=0" alt="Lenovo">
            <img src="https://upload.wikimedia.org/wikipedia/commons/f/fa/Apple_logo_black.svg" alt="Apple">
            <img src="https://th.bing.com/th/id/R.71aafcaba6d2c32b65c4aed76538b405?rik=fGctTPUHBB7cjQ&riu=http%3a%2f%2fgiahoa.com.vn%2fvnt_upload%2fclient%2fasus_logo_hd_photo_15_1.png&ehk=fF8W8cj1BY3sAQDdJ3AEbw2o8RWHL%2fLA%2fOdTTIuatKc%3d&risl=&pid=ImgRaw&r=0" alt="ASUS">
            <img src="https://i0.wp.com/iclinformatica.com.br/wp-content/uploads/2018/01/acer-png-acer-logo-png-1744.png?fit=1744%2C518&ssl=1" alt="Acer">
          </div>
        </div>
      </div>
    </div>

    <!-- Contact -->
    <div class="col-12">
      <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4">
          <div class="row g-4 align-items-center">
            <div class="col-md-7">
              <h4 class="section-title mb-3">Liên hệ</h4>
              <ul class="list-unstyled about-contact mb-0">
                <li><i class="fas fa-map-marker-alt"></i> 99 ABC, Thống Nhất, Gò Vấp, TP.HCM</li>
                <li><i class="fas fa-phone"></i> 0999 887 744</li>
                <li><i class="fas fa-envelope"></i> support@laptopshop.vn</li>
                <li><i class="fas fa-clock"></i> 9:00 – 21:00 (T2–CN)</li>
              </ul>
            </div>
            <div class="col-md-5">
              <div class="about-map rounded-3">
                <!-- Nếu có map thật thì nhúng iframe; tạm thời để placeholder -->
                <div class="about-map__placeholder">
                  <i class="fas fa-map-location-dot"></i>
                  <span>Xem bản đồ cửa hàng</span>
                </div>
              </div>
            </div>
          </div>

          <div class="d-flex flex-wrap gap-2 mt-4">
            <a href="/warranty" class="btn btn-outline-success rounded-pill">
              <i class="fas fa-file-shield me-2"></i> Chính sách bảo hành
            </a>
            <a href="/return" class="btn btn-outline-success rounded-pill">
              <i class="fas fa-arrows-rotate me-2"></i> Chính sách đổi trả
            </a>
            <a href="/contact" class="btn btn-ghost rounded-pill">
              <i class="fas fa-message me-2"></i> Liên hệ hỗ trợ
            </a>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

    </div>

    <%- include('../layout/footer'); -%>

        <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top">
            <i class="fa fa-arrow-up"></i>
        </a>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/client/js/main.js"></script>
</body>

</html>