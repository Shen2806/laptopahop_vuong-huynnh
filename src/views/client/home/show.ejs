                    <script>
                        /*animation*/
                        // 1) Gán hiệu ứng cho phần tử theo selector (không cần sửa EJS)
                        document.addEventListener('DOMContentLoaded', () => {
                            const attachReveal = (selector, effect = 'fade-up', step = 0) => {
                                const els = document.querySelectorAll(selector);
                                els.forEach((el, i) => {
                                    el.setAttribute('data-reveal', effect);
                                    if (step) el.style.setProperty('--reveal-delay', (i * step) + 'ms');
                                });
                            };

                            // Tiêu đề/section
                            attachReveal('.fire-title-wrapper', 'fade-up', 0);
                            attachReveal('#tech-news .d-flex', 'fade-up', 0); // header của tin tức
                            attachReveal('.tab-class h1', 'fade-up', 0);

                            // Cards các khu vực
                            attachReveal('.promo-card', 'zoom-in', 80);  // sản phẩm khuyến mãi (trong swiper)
                            attachReveal('.fruite-item', 'fade-up', 60);  // lưới sản phẩm nổi bật
