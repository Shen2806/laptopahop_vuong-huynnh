                                            } else if (it.kind === 'products') {
                                                lastProducts = it.products;
                                            } else if (it.kind === 'product-list') {
                                                lastList = it.products;
                                            } else if (it.kind === 'compare') {
                                                lastCompare = it.compare;
                                            }
                                        });
                                        // ✅ render block kết quả gần nhất
                                        if (lastCompare) appendCompare(lastCompare, { persist: false });
                                        else if (lastList) appendProductList(lastList, { persist: false });
                                        else if (lastProducts) appendProducts(lastProducts, { persist: false });

                                        $body.scrollTop = $body.scrollHeight;
                                    } else {
                                        // local trống -> hỏi server lấy lại danh sách gần nhất
                                        tryServerRehydrate();
                                    }
                                })();

                                // hỗ trợ back/forward cache: khi quay lại trang, đảm bảo rehydrate
                                window.addEventListener('pageshow', (e) => {
                                    if (!loadJSON(histKey(), []).length) tryServerRehydrate();
                                });
                                // ⭐ changed: câu chữ rehydrate thân thiện hơn
                                async function tryServerRehydrate() {
                                    try {
                                        const sid = sessionId || getSID();
                                        if (!sid) return;
                                        const res = await fetch(`/api/ai/session/${sid}/state`, { credentials: 'same-origin' });
                                        const data = await res.json().catch(() => null);
                                        if (!data) return;

                                        const h = loadJSON(histKey(), []);
                                        if (!h.length) {
                                            const hasProducts = Array.isArray(data.products) && data.products.length > 0;
                                            if (hasProducts) {
                                                if (data.format === 'list') appendProductList(data.products);
                                                else appendProducts(data.products);
                                            }
                                            // chỉ chèn lời chào nếu chưa từng chào và hiện chưa có kết quả nào cả
                                            if (data.reply) {
                                                if (!(isGreetingText(data.reply) && hasShownGreeting())) {
                                                    appendMsg('assistant', data.reply);
                                                }
                                            } else if (!hasShownGreeting() && !hasProducts) {
                                                appendMsg('assistant', 'Bạn có thể nhắn “liệt kê laptop …” hoặc “gửi 5 mẫu ASUS ~20tr”, mình gửi ngay nhé!');
                                            }
                                        }
                                    } catch { }
                                }


                                /** Render chip gợi ý / chip filter ở chân chat */
                                function renderChips(list) {
                                    if (!$chipsWrap) return;
                                    $chipsWrap.innerHTML = '';

                                    if (!Array.isArray(list) || list.length === 0) return;

                                    list.slice(0, 6).forEach(text => {
                                        const btn = document.createElement('button');
                                        btn.className = 'ai-chip';
                                        btn.type = 'button';
                                        btn.textContent = String(text);
                                        btn.setAttribute('data-q', String(text));
                                        btn.addEventListener('click', () => {
                                            const $input = document.getElementById('aiInput');
                                            if ($input) { $input.value = text; $input.focus(); }
                                        });
                                        $chipsWrap.appendChild(btn);
                                    });
                                }
                                async function sendMessage(text) {
                                    appendMsg('user', text);
                                    $typing.style.display = 'block';
                                    $send.disabled = true; $input.disabled = true;

                                    try {
                                        const res = await fetch('/api/ai/chat', {
                                            method: 'POST',
                                            headers: { 'Content-Type': 'application/json' },
                                            credentials: 'same-origin',
                                            body: JSON.stringify({ message: text, sessionId, meta: { page: 'home_show', ts: Date.now() } })
                                        });

                                        const data = await res.json().catch(() => null);

                                        if (!res.ok) {
                                            let msg = `Có lỗi máy chủ (${res.status}).`;
                                            if (data?.detail) msg += ` ${data.detail}`;
                                            appendMsg('assistant', msg);
                                            if (res.status === 403 && data?.message === 'session closed') {
                                                sessionId = null; SID_STORE.removeItem(SID_KEY);
                                            }
                                            return;
                                        }

                                        // cập nhật session
                                        if (data?.sessionId && data.sessionId !== sessionId) {
                                            const oldKey = histKey(); sessionId = data.sessionId;
                                            setSID(sessionId);
                                            const newKey = histKey(); migrateHistory(oldKey, newKey);
                                        }

                                        // 🚀 mở modal so sánh 1–4 sp (nếu có)
                                        if (data?.compare && Array.isArray(data.compare.items) && data.compare.items.length) {
                                            openCompareModal4(data.compare);
                                        }

                                        // render danh sách / thẻ
                                        const hasProducts = Array.isArray(data?.products) && data.products.length > 0;
                                        const reply = (typeof data?.reply === 'string' ? data.reply.trim() : '');

                                        // ✅ Luôn in lời mở đầu trước
                                        if (reply) {
                                            appendMsg('assistant', reply);
                                        }
                                        // ✅ Rồi gửi sản phẩm ngay sau đó (nếu có)
                                        if (hasProducts) {
                                            if (data.format === 'list') appendProductList(data.products);
                                            else appendProducts(data.products);
                                        } else if (!reply && !data?.compare) {
                                            appendMsg('assistant', 'Mình chưa hiểu ý bạn. Bạn thử “liệt kê …” hoặc “gửi 5 mẫu …” nhé, mình gửi ngay.');
                                        }

                                        // chips
                                        if (data?.activeFilters) {
                                            const chips = [];
                                            if (data.activeFilters.brand) chips.push('Hãng: ' + data.activeFilters.brand);
                                            if (data.activeFilters.target) chips.push('Nhu cầu: ' + data.activeFilters.target);
                                            if (data.activeFilters.min || data.activeFilters.max)
                                                chips.push('Ngân sách: ' + ((data.activeFilters.min || 0) / 1e6) + '–' +
                                                    (data.activeFilters.max ? (data.activeFilters.max / 1e6) : '∞') + 'tr');
                                            if (chips.length) renderChips(chips);
                                        }
                                        if (Array.isArray(data?.suggestions) && data.suggestions.length) renderChips(data.suggestions);

                                    } catch (e) {
                                        console.error(e);
                                        appendMsg('assistant', 'Không kết nối được máy chủ. Bạn thử lại sau nhé.');
                                    } finally {
                                        $typing.style.display = 'none';
                                        $send.disabled = false; $input.disabled = false; $input.focus();
                                    }
                                }



                                $form.addEventListener('submit', e => { e.preventDefault(); const val = ($input.value || '').trim(); if (!val) return; $input.value = ''; sendMessage(val); });
                                $input.addEventListener('keydown', e => { if (e.key === 'Enter' && !e.shiftKey) { e.preventDefault(); $form.dispatchEvent(new Event('submit', { cancelable: true })); } });

                                // clear local history when logout (bind all logout forms/links)
                                document.querySelectorAll('form[action="/logout"], a[href="/logout"]').forEach(el => {
                                    const clearAll = () => {
                                        try {
                                            SID_STORE.removeItem(SID_KEY);              // ✅ xoá SID trong localStorage
                                            localStorage.removeItem(OPEN_KEY);          // đóng card
                                            Object.keys(localStorage).forEach(k => {
                                                if (k.startsWith(HIST_PREFIX)) localStorage.removeItem(k); // xoá hết lịch sử
                                            });
                                        } catch { }
                                    };
                                    el.addEventListener('click', clearAll);
                                    el.addEventListener('submit', clearAll);
                                });

                            })();
                        </script>

