                                    const { hasEnough, prompt } = buildPrompt(userText);

                                    let msgs;
                                    if (hasEnough) {
                                        askedOnce = false; // reset vì đã đủ
                                        msgs = [{ role: "system", content: SYSTEM_PROMPT }, ...FEWSHOT, { role: "user", content: prompt }];
