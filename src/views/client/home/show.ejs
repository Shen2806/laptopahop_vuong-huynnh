<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>LaptopShop- VH </title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap"
        rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/client/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="/client/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="/client/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/client/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css"
        integrity="sha512-wJgJNTBBkLit7ymC6vvzM1EcSWeM9mmOu+1USHaRBbHkm6W9EgM0HY27+UtUaprntaYQJF75rc8gjxllKs5OIQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <link href="/client/css/home/show.css" rel="stylesheet">


</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner"
        class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar start -->
    <%- include('../layout/header'); -%>
        <!-- Navbar End -->

        <!-- Hero Start -->
        <%- include('../layout/banner'); -%>
            <!-- Hero End -->


            <!-- Sản phẩm khuyến mãi -->


            <div class="container-fluid">
                <div class="container ">
                    <div class="tab-class text-center">
                        <div class="row g-4">
                            <section class="mt-5">
                                <h2 class="fire-title-wrapper ">
                                    <span class="fire-title ">
                                        <img src="https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExcmJqeW0xZ2Nsc3o5Z245amhwdXozY3NlbGQyanFycXd3OG1ycG9ybSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/KPVJXH61g2jHkdqZES/giphy.gif"
                                            alt="fire" class="fire-gif"> <span>Sản phẩm khuyến
                                            mãi</span> </span>
                                    <video autoplay loop muted playsinline class="fire-bg">
                                        <source src="https://i.imgur.com/J6J4pP6.mp4" type="video/mp4">
                                    </video>
                                </h2>
                                <!-- Swiper container -->
                                <div class="swiper promo-swiper">
                                    <div class="swiper-wrapper">
                                        <% promoProducts.forEach(p=> { %>
                                            <div class="swiper-slide">
                                                <div
                                                    class="card h-100 shadow-lg border-0 promo-card position-relative overflow-hidden">

                                                    <!-- Hình ảnh -->
                                                    <div class="promo-img-wrapper">
                                                        <img src="/images/product/<%= p.image %>"
                                                            class="card-img-top promo-img" alt="<%= p.name %>">
                                                    </div>

                                                    <div class="card-body d-flex flex-column">
                                                        <h5 class="card-title text-truncate fw-bold">
                                                            <%= p.name %>
                                                        </h5>
                                                        <p class="mb-1 text-decoration-line-through text-muted small">
                                                            <%= p.price.toLocaleString('vi-VN') %> ₫
                                                                <!-- Badge giảm giá -->
                                                                <span
                                                                    class="badge bg-danger position-absolute promo-badge"
                                                                    style="margin-left: 10px; margin-top: 2px;">
                                                                    -<%= p.discount %>%
                                                                </span>
                                                        </p>
                                                        <p class="fw-bold text-danger fs-5 mb-3">
                                                            <%= (p.price * (100 - p.discount) /
                                                                100).toLocaleString('vi-VN') %> ₫
                                                        </p>

                                                        <div class="mt-auto text-center">
                                                            <a href="/product/<%= p.id %>"
                                                                class="btn btn-success rounded-pill px-4">
                                                                <i class="fa fa-eye me-2"></i> Xem
                                                                chi tiết
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>

                                    <!-- Nút điều hướng -->
                                    <div class="swiper-button-next"></div>
                                    <div class="swiper-button-prev"></div>

                                    <!-- Thanh pagination -->
                                    <div class="swiper-pagination"></div>
                                </div>
                            </section>

                        </div>
                    </div>

                </div>
            </div>
            <!-- Sản phẩm khuyến mãi -->


            <!-- Fruits Shop Start-->
            <div class="container-fluid ">
                <div class="container ">
                    <div class="tab-class text-center">
                        <div class="row g-4">
                            <div class="col-lg-4 text-start">
                                <h1>Sản phẩm nổi bật</h1>
                            </div>
                            <div class="col-lg-8 text-end">
                                <ul class="nav nav-pills d-inline-flex text-center mb-5">
                                    <li class="nav-item">
                                        <a class="d-flex m-2 py-2 btn btn-success rounded-pill active" href="/products">
                                            <span class="text-light" style="width: 130px;">Tất cả sản
                                                phẩm</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane fade show p-0 active">
                                <div class="row g-4">
                                    <div class="col-lg-12">
                                        <div class="row g-4">
                                            <% products.forEach( function (product) { %>
                                                <div class="col-md-6 col-lg-4 col-xl-3">
                                                    <div class="rounded position-relative fruite-item">
                                                        <div class="fruite-img">
                                                            <img src="/images/product/<%= product.image %>"
                                                                class="img-fluid w-100 rounded-top" alt="">
                                                        </div>
                                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                                            style="top: 10px; left: 10px;">Laptop</div>
                                                        <div class="p-4 border  border-top-0 rounded-bottom">
                                                            <h4 style="font-size: 18px;">
                                                                <a href="/product/<%= product.id %>">
                                                                    <%= product.name %>
                                                                </a>

                                                            </h4>
                                                            <p style="font-size: 15px;">
                                                                <%= product.shortDesc %>
                                                            </p>
                                                            <div class="d-flex justify-content-center flex-lg-wrap row">
                                                                <% if (product.discount> 0) { %>
                                                                    <!-- Giá gốc -->
                                                                    <div
                                                                        class="d-flex align-items-center justify-content-center">
                                                                        <p class="mb-1 text-decoration-line-through text-muted small me-2"
                                                                            style="font-size: 12px;">
                                                                            <%= new Intl.NumberFormat('vi-VN', {
                                                                                style: 'currency' , currency: 'VND'
                                                                                }).format(product.price) %>
                                                                        </p>

                                                                        <span class="badge bg-danger"
                                                                            style="margin-bottom: 20px;">
                                                                            -<%= product.discount %>%
                                                                        </span>
                                                                    </div>



                                                                    <!-- Giá sau giảm + % giảm -->
                                                                    <div class="d-flex align-items-center justify-content-center"
                                                                        style="margin-bottom: 30px;">
                                                                        <p class="fw-bold text-danger fs-5 mb-0 me-2">
                                                                            <%= new Intl.NumberFormat('vi-VN', {
                                                                                style: 'currency' , currency: 'VND'
                                                                                }).format(product.price * (100 -
                                                                                product.discount) / 100) %>
                                                                        </p>

                                                                    </div>

                                                                    <% } else { %>
                                                                        <!-- Giá thường -->
                                                                        <div class="text-dark fs-5 fw-bold mb-3 text-center w-100 "
                                                                            style="padding-bottom: 15px;">
                                                                            <%= new Intl.NumberFormat('vi-VN', {
                                                                                style: 'currency' , currency: 'VND'
                                                                                }).format(product.price) %>
                                                                        </div>
                                                                        <% } %>

                                                                            <!-- Nút thêm vào giỏ + tồn kho -->
                                                                            <div
                                                                                class="d-flex justify-content-between align-items-center mt-1 w-100">
                                                                                <form method="post"
                                                                                    action="/add-product-to-cart/<%= product.id %>">
                                                                                    <button
                                                                                        data-product-id="<%=product.id%>"
                                                                                        class="btnAddToCartHomePage mx-auto btn border rounded-pill px-3 text-primary">
                                                                                        <i
                                                                                            class="fa fa-shopping-bag me-2 text-primary"></i>
                                                                                        Thêm vào giỏ hàng
                                                                                    </button>
                                                                                </form>
                                                                                <span class="badge bg-primary ms-3">
                                                                                    Còn: <%= product.quantity %>
                                                                                </span>
                                                                            </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                                    <div class="pagination d-flex justify-content-center mt-5">
                                                        <li
                                                            class="<%= page === 1 ? 'disabled page-item' : 'page-item' %> ">
                                                            <a class="page-link" href="/?page=<%= page - 1  %>"
                                                                aria-label="Previous">
                                                                <span aria-hidden="true">&laquo;</span>
                                                            </a>
                                                        </li>
                                                        <% for(var i=1; i <=totalPages; i++) {%>
                                                            <li class="page-item">
                                                                <a class="<%= page === i ? 'active page-link' : 'page-link' %>"
                                                                    href="/?page=<%= i  %>">
                                                                    <%= i %>
                                                                </a>
                                                            </li>
                                                            <% } %>
                                                                <li
                                                                    class="<%= page === totalPages ? 'disabled page-item' : 'page-item' %> ">
                                                                    <a class="page-link" href="/?page=<%= page + 1  %>"
                                                                        aria-label="Next">
                                                                        <span aria-hidden="true">&raquo;</span>
                                                                    </a>
                                                                </li>
                                                    </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Fruits Shop End-->

            <!-- Features Section Start -->
            <%- include('../layout/feature'); -%>
                <!-- Features Section End -->

                <!-- Blogs Start-->
                <div class="container-fluid">
                    <div class="container">
                        <div class="tab-class text-center">
                            <div class="row g-4">
                                <section class="mt-5" id="tech-news">
                                    <div class="d-flex align-items-center justify-content-between mb-3">
                                        <h2 class="mb-0 text-primary">Tin tức công nghệ</h2>
                                        <a href="/blogs" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
                                    </div>

                                    <% if (latestBlogs && latestBlogs.length) { %>
                                        <div class="swiper news-swiper">
                                            <div class="swiper-wrapper">
                                                <% latestBlogs.forEach(b=> {
                                                    // Rút gọn content, loại bỏ thẻ HTML
                                                    const plain = (b.content || '').replace(/<[^>]*>/g, '');
                                                        const short = plain.length > 140 ? (plain.slice(0, 140) + '...')
                                                        : plain;
                                                        %>
                                                        <div class="swiper-slide">
                                                            <div
                                                                class="news-card shadow-sm rounded h-100 d-flex flex-column">
                                                                <img src="<%= b.thumbnail || '/images/default-blog.jpg' %>"
                                                                    class="news-img" alt="<%= b.title %>"
                                                                    style="height:180px; object-fit:cover; width:100%;" />
                                                                <div
                                                                    class="p-3 d-flex flex-column flex-grow-1 text-start">
                                                                    <h5 class="fw-bold mb-2 text-truncate">
                                                                        <a href="/blogs/<%= b.slug %>"
                                                                            class="text-decoration-none text-dark">
                                                                            <%= b.title %>
                                                                        </a>
                                                                    </h5>

                                                                    <p class="news-summary text-muted mb-2"
                                                                        style="min-height:48px;">
                                                                        <%= short %>
                                                                    </p>

                                                                    <div class="small text-secondary mt-auto">
                                                                        <i class="bi bi-calendar3"></i>
                                                                        <%= new
                                                                            Date(b.createdAt).toLocaleDateString('vi-VN')
                                                                            %>
                                                                            <% if (b.author) { %>
                                                                                &nbsp;•&nbsp;<i
                                                                                    class="bi bi-person"></i>
                                                                                <%= b.author %>
                                                                                    <% } %>
                                                                    </div>

                                                                    <a href="/blogs/<%= b.slug %>"
                                                                        class="btn btn-sm btn-primary mt-2 align-self-start">
                                                                        Đọc tiếp
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% }) %>
                                            </div>

                                            <!-- Nút điều hướng + Pagination -->
                                            <div class="swiper-button-next"></div>
                                            <div class="swiper-button-prev"></div>
                                            <div class="swiper-pagination"></div>
                                        </div>
                                        <% } else { %>
                                            <div class="text-muted fst-italic">Chưa có bài viết nào.</div>
                                            <% } %>

                                </section>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Blogs End-->


                <!-- Footer Start -->
                <%- include('../layout/footer'); -%>
                    <!-- Footer End -->

                    <!-- Back to Top -->
                    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i
                            class="fa fa-arrow-up"></i></a>

                    <!-- JavaScript Libraries -->
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="/client/lib/easing/easing.min.js"></script>
                    <script src="/client/lib/waypoints/waypoints.min.js"></script>
                    <script src="/client/lib/lightbox/js/lightbox.min.js"></script>
                    <script src="/client/lib/owlcarousel/owl.carousel.min.js"></script>

                    <!-- Template Javascript -->
                    <script src="/client/js/main.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"
                        integrity="sha512-zlWWyZq71UMApAjih4WkaRpikgY9Bz1oXIW5G0fED4vk14JjGlQ1UmkGM392jEULP8jbNMiwLWdM8Z87Hu88Fw=="
                        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
                    <script>
                        var swiper = new Swiper('.promo-swiper', {
                            loop: true,  // Bật vòng lặp vô hạn
                            slidesPerView: 3,  // Hiển thị 3 sản phẩm mỗi lần
                            spaceBetween: 30,  // Khoảng cách giữa các sản phẩm
                            autoplay: {
                                delay: 2000,  // Thời gian chuyển slide (2.5 giây)
                            },
                            navigation: {
                                nextEl: '.swiper-button-next',
                                prevEl: '.swiper-button-prev',
                            },
                            pagination: {
                                el: '.swiper-pagination',
                                clickable: true,
                            },
                        });

                        /*tin tức công nghệ*/
                        var newsSwiper = new Swiper(".news-swiper", {
                            slidesPerView: 3,
                            spaceBetween: 20,
                            loop: true,
                            autoplay: {
                                delay: 2000,
                                disableOnInteraction: false,
                            },
                            pagination: {
                                el: ".news-swiper .swiper-pagination",
                                clickable: true,
                            },
                            navigation: {
                                nextEl: ".news-swiper .swiper-button-next",
                                prevEl: ".news-swiper .swiper-button-prev",
                            },
                        });

                    </script>



</body>

</html>