                            function buildPrompt(userText) {
                                const need = detectNeed(userText) || lastNeed;
                                const budget = parseBudget(userText) || lastBudget; // [min,max] VND

                                const hasEnough = !!need && !!budget;
                                if (need) lastNeed = need;
                                if (budget) lastBudget = budget;

                                let ctx = "";
                                if (hasEnough) {
                                    ctx = [
                                        "[BỐI CẢNH CÓ CẤU TRÚC]",
                                        `nhu_cau=${need}`,
                                        `ngan_sach_vnd_min=${budget[0]}`,
                                        `ngan_sach_vnd_max=${budget[1]}`,
                                        "khong_hoi_lai=true",
                                        "[/BỐI CẢNH CÓ CẤU TRÚC]"
                                    ].join("\n");
                                }
                                const ask = hasEnough
                                    ? "Dựa trên BỐI CẢNH CÓ CẤU TRÚC, hãy trả lời ngay theo mẫu."
                                    : (!askedOnce
                                        ? "Thiếu nhu cầu hoặc ngân sách. Hỏi lại đúng 1–2 câu ngắn (VNĐ), không vòng vo."
                                        : // đã hỏi 1 lần rồi mà vẫn thiếu -> đưa gợi ý chung, không hỏi nữa
                                        "Không đủ thông tin. Đưa gợi ý chung ngắn gọn theo từng nhu cầu phổ biến.");

                                return { hasEnough, prompt: `${ctx}\nNgười dùng: """${userText}"""\n${ask}` };
                            }

                            async function ask(userText) {
                                if (!userText || busy) return;
                                append("user", userText);
                                ui.typing.style.display = "block"; ui.send.disabled = true; ui.input.disabled = true; busy = true;
                                try {
