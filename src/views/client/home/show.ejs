                        } else {
                            window.__TURTLE_AI_ACTIVE__ = true;

                            const $ = (id) => document.getElementById(id);
                            const ui = {
                                btn: $("aiTurtleBtn"), card: $("aiTurtleCard"), close: $("aiTurtleClose"),
                                body: $("aiChatBody"), form: $("aiForm"), input: $("aiInput"),
                                send: $("aiSend"), typing: $("aiTyping"), suggest: document.querySelector(".ai-suggest"),
                            };

                            // ====== Parser VN (mạnh hơn) ======
                            const NEED_MAP = [
                                { key: "GAMING", kws: ["gaming", "game", "chơi game", "gamer"] },
                                { key: "OFFICE", kws: ["văn phòng", "office", "word", "excel"] },
                                { key: "STUDENT_IT", kws: ["sinh viên it", "sv it", "lập trình", "code", "dev", "it"] },
                                { key: "CREATOR", kws: ["đồ họa", "đồ hoạ", "thiết kế", "photoshop", "premiere", "edit", "dựng phim", "creator"] },
                                { key: "MOBILE", kws: ["mỏng nhẹ", "nhẹ", "di chuyển", "portable", "ultrabook"] },
                                { key: "BUSINESS", kws: ["doanh nhân", "bền bỉ", "bảo mật", "business"] },
                            ];
                            const deaccent = (s) => s.normalize("NFD").replace(/\p{Diacritic}/gu, "").toLowerCase();

                            function detectNeed(s) {
                                const t = deaccent(s);
                                for (const g of NEED_MAP) if (g.kws.some(k => t.includes(deaccent(k)))) return g.key;
                                return null;
                            }

                            // “20–25tr”, “từ 15 đến 20”, “~20tr”, “dưới 12”, “>= 18”, …
                            function parseBudget(text) {
                                const t = deaccent(text).replace(/\./g, '').replace(/,/g, '').trim();
                                // range: 15-25 | 15–25 | 15—25 | tu 15 den 25 | từ 15 tới 25
                                let m = t.match(/(\d{1,3})\s*(?:-|–|—|to|toi|den|d?n|t?i|t?o|t?i|t?u|tu|den|toi|den|t?oi|t?en|t?oi|t?oi|t?oi|toi|den|toi|den|toi|den|toi|den|toi|den|toi|den|toi|den|toi|den|toi|den|t?u|t?oi|den|toi|t?i|t?o|d?n|den|toi|t?i|toi|den)\s*(\d{1,3})\s*(?:tr|trieu|m)?/);
                                if (m) return [+m[1] * 1e6, +m[2] * 1e6].sort((a, b) => a - b);

                                // dưới X
                                m = t.match(/(?:duoi|<|<=)\s*(\d{1,3})\s*(?:tr|trieu|m)?/);
                                if (m) return [0, +m[1] * 1e6];

                                // trên X
                                m = t.match(/(?:tren|>|>=)\s*(\d{1,3})\s*(?:tr|trieu|m)?/);
                                if (m) { const x = +m[1] * 1e6; return [x, x + 9e12]; }

                                // xấp xỉ / tầm / khoảng / ~20
                                m = t.match(/(?:~|tam|khoang|xap xi)?\s*(\d{1,3})\s*(?:tr|trieu|m)?/);
                                if (m) { const x = +m[1]; const pad = x >= 25 ? 5 : 3; return [(x - pad) * 1e6, (x + pad) * 1e6]; }

                                return null;
                            }

                            // ====== Prompt & Few-shot ======
                            const SYSTEM_PROMPT = `
Bạn là "Rùa AI" – trợ lý tư vấn laptop của cửa hàng.
Nguyên tắc:
1) Nếu đã có **nhu cầu** + **ngân sách** → Trả lời ngay, KHÔNG hỏi lại.
2) Nếu thiếu 1 trong 2 → hỏi làm rõ đúng 1 tin ngắn (tối đa 2 câu).
3) Trả lời tiếng Việt, ngắn gọn, có bullet và **Lời khuyên** ở cuối.
4) Không bịa giá của cửa hàng; nếu cần ghi "(giá tham khảo thị trường)".

Mặc định theo nhu cầu:
- Gaming (~20±3tr): i5/R5 H, RAM 16GB, SSD ≥512GB, RTX 3050/4050, 15.6" 144Hz.
- Văn phòng/di động: ≤1.3kg, pin ≥50Wh, sạc USB-C PD, RAM 16GB, SSD 512GB.
- Đồ hoạ: i7/R7 + RTX 4060↑, RAM 16–32GB, màn 100% sRGB (IPS/OLED), SSD 1TB.
- SV IT: i5/R5, RAM 16GB, SSD 512GB, đủ cổng (USB-C, HDMI), Wi-Fi 6.

Khi đủ thông tin, xuất:
Gợi ý nhanh (**giá tham khảo thị trường**, trong khoảng X–Y triệu):
- **Gợi ý 1 (đặc tính)**: CPU … / GPU … / RAM … / SSD … / Màn …  Ưu: … • Nhược: …
- **Gợi ý 2**: …
- **Gợi ý 3**: …
**Lời khuyên:** … (1–2 câu).
  `.trim();

                            const FEWSHOT = [
                                { role: "user", content: "Tư vấn laptop gaming tầm 20 triệu" },
                                {
                                    role: "assistant", content:
                                        `Gợi ý nhanh (giá tham khảo thị trường, ~17–23 triệu):
- **Gợi ý 1 (cân bằng)**: i5-12500H / RTX 4050 / RAM 16GB / SSD 512GB / 15.6" 144Hz — Ưu: FPS ổn; Nhược: pin trung bình.
- **Gợi ý 2 (mát & bền)**: R7-6800H / RTX 3060 / 16GB / 512GB / 15.6" 144Hz — Ưu: đa luồng khỏe; Nhược: GPU đời trước.
- **Gợi ý 3 (ưu màn)**: i7-12700H / RTX 3050Ti / 16GB / 512GB / 15.6" 144Hz — Ưu: hiển thị đẹp; Nhược: GPU yếu hơn 4050.
**Lời khuyên:** Ưu tiên RAM 16GB dual-channel, kiểm tra tản nhiệt & bảo hành.`
                                }
                            ];

                            // ====== UI helpers ======
                            const escapeHtml = (s) => String(s).replace(/[&<>"]/g, c => ({ '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;' }[c]));
                            const safeText = (s) => escapeHtml(s).replace(/\*\*(.+?)\*\*/g, "<strong>$1</strong>").replace(/\n/g, "<br>");
                            function append(role, text) {
                                const row = document.createElement("div");
                                row.className = "ai-msg " + (role === "user" ? "ai-user" : "ai-bot");
                                const b = document.createElement("div"); b.className = "ai-msg__bubble";
                                b.innerHTML = role === "assistant" ? safeText(text) : escapeHtml(text);
                                row.appendChild(b); ui.body.appendChild(row); ui.body.scrollTop = ui.body.scrollHeight;
                            }

                            // ====== Engine + state ======
                            let engine = null, busy = false, askedOnce = false;
                            let lastNeed = null, lastBudget = null; // nhớ theo phiên UI
                            const base = [{ role: "system", content: SYSTEM_PROMPT }, ...FEWSHOT];
                            const history = [...base];

                            async function ensureEngine() {
                                if (engine) return engine;
                                if (!("gpu" in navigator)) {
                                    append("assistant", "Thiết bị chưa hỗ trợ WebGPU. Dùng Chrome/Edge mới để dùng chatbot miễn phí.");
