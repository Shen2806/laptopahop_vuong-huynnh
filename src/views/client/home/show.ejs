                                el: '.swiper-pagination',
                                clickable: true,
                            },
                        });

                        /*tin tức công nghệ*/
                        var newsSwiper = new Swiper(".news-swiper", {
                            slidesPerView: 3,
                            spaceBetween: 20,
                            loop: true,
                            autoplay: {
                                delay: 2000,
                                disableOnInteraction: false,
                            },
                            pagination: {
                                el: ".news-swiper .swiper-pagination",
                                clickable: true,
                            },
                            navigation: {
                                nextEl: ".news-swiper .swiper-button-next",
                                prevEl: ".news-swiper .swiper-button-prev",
                            },
                        });


                        /*animation*/
                        // 1) Gán hiệu ứng cho phần tử theo selector (không cần sửa EJS)
                        document.addEventListener('DOMContentLoaded', () => {
                            const attachReveal = (selector, effect = 'fade-up', step = 0) => {
                                const els = document.querySelectorAll(selector);
                                els.forEach((el, i) => {
                                    el.setAttribute('data-reveal', effect);
                                    if (step) el.style.setProperty('--reveal-delay', (i * step) + 'ms');
                                });
                            };

                            // Tiêu đề/section
                            attachReveal('.fire-title-wrapper', 'fade-up', 0);
                            attachReveal('#tech-news .d-flex', 'fade-up', 0); // header của tin tức
                            attachReveal('.tab-class h1', 'fade-up', 0);

                            // Cards các khu vực
                            attachReveal('.promo-card', 'zoom-in', 80);  // sản phẩm khuyến mãi (trong swiper)
                            attachReveal('.fruite-item', 'fade-up', 60);  // lưới sản phẩm nổi bật
                            attachReveal('.recent-card', 'fade-up', 60);  // đã xem gần đây
                            attachReveal('.news-card', 'fade-up', 80);  // bài viết

                            // Nếu file feature có class .featurs-item -> cũng animate luôn
                            attachReveal('.featurs-item', 'fade-up', 80);
                        });

                        // 2) Observer: khi vào viewport thì hiện ra & unobserve (chỉ hiện 1 lần)
                        (function () {
                            const io = new IntersectionObserver((entries, obs) => {
                                entries.forEach(ent => {
                                    if (ent.isIntersecting) {
                                        ent.target.classList.add('is-visible');
                                        obs.unobserve(ent.target);
                                    }
                                });
                            }, { threshold: 0.12, rootMargin: '0px 0px -5% 0px' });

                            const hydrate = () => {
                                document.querySelectorAll('[data-reveal]').forEach(el => io.observe(el));
                            };

                            if (document.readyState === 'loading') {
                                document.addEventListener('DOMContentLoaded', hydrate);
                            } else {
                                hydrate();
                            }
                        })();
                    </script>

                    <!-- Rùa AI -->
                    <script>
                        (function () {
                            const $btn = document.getElementById('aiTurtleBtn');
                            const $card = document.getElementById('aiTurtleCard');
                            const $close = document.getElementById('aiTurtleClose');
                            const $body = document.getElementById('aiChatBody');
                            const $form = document.getElementById('aiForm');
                            const $input = document.getElementById('aiInput');
                            const $send = document.getElementById('aiSend');
                            const $typing = document.getElementById('aiTyping');

                            if (!$btn || !$card || !$form) return;

                            function openCard() { $card.style.display = 'block'; setTimeout(() => $input?.focus(), 80); }
                            function closeCard() { $card.style.display = 'none'; }
                            $btn.addEventListener('click', openCard);
                            $close.addEventListener('click', closeCard);

                            // Chips gợi ý
                            document.querySelectorAll('.ai-chip').forEach(ch => {
                                ch.addEventListener('click', () => {
                                    const q = ch.getAttribute('data-q') || '';
                                    $input.value = q;
                                    $input.focus();
                                });
                            });

                            function appendMsg(role, text) {
                                const wrap = document.createElement('div');
                                wrap.className = 'ai-msg ' + (role === 'user' ? 'ai-user' : 'ai-bot');
                                const b = document.createElement('div');
                                b.className = 'ai-msg__bubble';
                                b.textContent = text;
                                wrap.appendChild(b);
                                $body.appendChild(wrap);
                                $body.scrollTop = $body.scrollHeight;
                            }

                            async function sendMessage(text) {
                                appendMsg('user', text);
                                $typing.style.display = 'block';
                                $send.disabled = true; $input.disabled = true;

                                try {
                                    const res = await fetch('/api/ai/chat', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        credentials: 'same-origin',
                                        body: JSON.stringify({
                                            message: text,
                                            // bạn có thể truyền thêm ngữ cảnh trang để AI hiểu:
                                            meta: { page: 'home_show', ts: Date.now() }
                                        })
                                    });
                                    const data = await res.json();
                                    const reply = data?.reply || 'Xin lỗi, mình chưa hiểu. Bạn thử diễn đạt khác giúp mình nhé!';
                                    appendMsg('assistant', reply);
                                } catch (err) {
                                    console.error(err);
                                    appendMsg('assistant', 'Có lỗi kết nối máy chủ. Vui lòng thử lại sau nhé.');
                                } finally {
                                    $typing.style.display = 'none';
                                    $send.disabled = false; $input.disabled = false; $input.focus();
                                }
                            }

                            $form.addEventListener('submit', (e) => {
                                e.preventDefault();
                                const val = ($input.value || '').trim();
                                if (!val) return;
                                $input.value = '';
                                sendMessage(val);
                            });

                            // Enter để gửi, Shift+Enter xuống dòng
                            $input.addEventListener('keydown', (e) => {
                                if (e.key === 'Enter' && !e.shiftKey) {
                                    e.preventDefault();
                                    $form.dispatchEvent(new Event('submit', { cancelable: true }));
                                }
                            });

                            // Tự đóng khi click ra ngoài
                            document.addEventListener('click', (e) => {
                                const root = document.getElementById('aiTurtle');
                                if (!root) return;
                                if (!$card.contains(e.target) && !$btn.contains(e.target)) {
                                    // closeCard();  // nếu muốn tự đóng khi click ra ngoài, bỏ comment
                                }
                            });
                        })();
                    </script>




