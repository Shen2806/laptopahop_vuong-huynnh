  <!-- Nút Previous -->
  <li class="<%= page === 1 ? 'disabled page-item' : 'page-item' %> ">
    <a class="page-link" href="/?page=<%= page - 1 %>" aria-label="Previous">
      <span aria-hidden="true">&laquo;</span>
    </a>
  </li>

  <% 
    // JS function tạo danh sách trang
    function getPagination(current, total) {
      const pages = [];
      const range = (start, end) => {
        const arr = [];
        for (let i = start; i <= end; i++) arr.push(i);
        return arr;
      };
      if (total <= 7) return range(1, total);

      const left = 1;   // 3 trang đầu
      const right = 1;  // 3 trang cuối

      pages.push(...range(1, left));

      if (current > left + 2) {
        pages.push("...");
      }

      const start = Math.max(current - 1, left + 1);
      const end = Math.min(current + 1, total - right);
      for (let i = start; i <= end; i++) {
        pages.push(i);
      }

      if (current < total - right - 1) {
        pages.push("...");
      }

      pages.push(...range(total - right + 1, total));
      return pages;
    }

    const pagination = getPagination(page, totalPages);
  %>

  <% pagination.forEach(p => { %>
    <% if (p === "...") { %>
      <li class="page-item disabled"><span class="page-link">...</span></li>
    <% } else { %>
      <li class="page-item">
        <a class="page-link <%= page === p ? 'active' : '' %>" href="/?page=<%= p %>"><%= p %></a>
      </li>
    <% } %>
  <% }) %>

  <!-- Nút Next -->
  <li class="<%= page === totalPages ? 'disabled page-item' : 'page-item' %> ">
    <a class="page-link" href="/?page=<%= page + 1 %>" aria-label="Next">
      <span aria-hidden="true">&raquo;</span>
    </a>
  </li>
