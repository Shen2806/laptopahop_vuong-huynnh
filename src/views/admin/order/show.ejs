<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="MinhVuong&QuocHuynh - Dự án laptopshop" />
    <meta name="author" content="MinhVuong&QuocHuynh" />
    <title>Manage Orders - LaptopShop</title>

    <link href="/admin/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="/admin/css/order/show.css">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- POLISH: đồng bộ với dashboard/header/sidenav -->
    <style>

    </style>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <!-- Tiêu đề -->
                            <div class="header-actions mt-4 mb-3">
                                <h1 class="page-title h3 m-0">
                                    <i class="fa-solid fa-receipt me-2"></i> Quản lý đơn hàng
                                </h1>

                                <form class="searchbar" action="/admin/order" method="get" role="search">
                                    <div class="searchbar-inner">
                                        <span class="search-icon">
                                            <i class="fa-solid fa-magnifying-glass"></i>
                                        </span>

                                        <input class="search-input" type="search" name="search"
                                            placeholder="Tìm theo mã đơn, tên/email, sản phẩm, trạng thái..."
                                            value="<%= typeof search !== 'undefined' ? search : '' %>"
                                            aria-label="Search orders" />

                                        <% if (search) { %>
                                            <a class="search-clear" href="/admin/order" title="Xóa lọc">
                                                <i class="fa-solid fa-xmark"></i>
                                            </a>
                                            <% } %>

                                                <button class="btn-search" type="submit">Tìm</button>
                                    </div>
                                </form>
                            </div>

                            <!-- Breadcrumb -->
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active text-light">Orders</li>
                            </ol>

                            <!-- Bảng Orders -->
                            <div class="card glass border-0 rounded-3">
                                <div class="card-header bg-primary text-white fw-semibold">
                                    <i class="fa-solid fa-table me-2"></i> Danh sách đơn hàng
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table align-middle table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Người dùng</th>
                                                    <th>Tổng tiền</th>
                                                    <th>Trạng thái</th>
                                                    <th>Payment Method</th>
                                                    <th>Payment Status</th>
                                                    <th class="text-center">Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% orders.forEach(function (order) { %>
                                                    <tr>
                                                        <td><span class="badge bg-secondary">
                                                                <%= order.id %>
                                                            </span></td>
                                                        <td>
                                                            <%= order?.user?.fullName ?? "" %>
                                                        </td>
                                                        <td>
                                                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                                currency: 'VND' }) .format(order.totalPrice) %>
                                                        </td>
                                                        <td>
                                                            <% if (order.status==='PENDING' ) { %>
                                                                <span class="badge bg-warning text-dark">Chờ xử
                                                                    lý</span>
                                                                <% } else if (order.status==='CONFIRMED' ) { %>
                                                                    <span class="badge bg-info text-dark">Đã xác nhận
                                                                        đơn</span>
                                                                    <% } else if (order.status==='SHIPPING' ) { %>
                                                                        <span class="badge bg-primary">Đang vận
                                                                            chuyển</span>
                                                                        <% } else if (order.status==='OUT_FOR_DELIVERY'
                                                                            ) { %>
                                                                            <span class="badge bg-secondary">Đang giao
                                                                                hàng</span>
                                                                            <% } else if (order.status==='DELIVERED' ) {
                                                                                %>
                                                                                <span class="badge bg-success">Đã giao
                                                                                    hàng</span>
                                                                                <% } else if (order.status==='CANCELED'
                                                                                    ) { %>
                                                                                    <span class="badge bg-danger">Đã
                                                                                        hủy</span>
                                                                                    <% } else { %>
                                                                                        <span
                                                                                            class="badge bg-light text-dark">
                                                                                            <%= order.status %>
                                                                                        </span>
                                                                                        <% } %>
                                                        </td>
                                                        <td>
                                                            <%= order.paymentMethod %>
                                                        </td>
                                                        <td>
                                                            <% if(order.paymentStatus==='PAID' ) { %>
                                                                <span class="badge bg-success">Đã thanh toán</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary">Chưa thanh
                                                                        toán</span>
                                                                    <% } %>
                                                        </td>
                                                        <td class="text-center">
                                                            <form action="/admin/order/<%= order.id %>" method="get">
                                                                <button type="submit"
                                                                    class="btn btn-sm btn-warning text-white">
                                                                    <i class="fa-solid fa-eye"></i> Xem đơn hàng
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% const queryStr=search ? '&search=' + encodeURIComponent(search) : '' ; %>
                                        <!-- Pagination (block ranges 1–10, 11–20, ...) -->
                                        <% const oTotalPagesNum=Number(totalPages) || 1; const oCurrentPage=Number(page)
                                            || 1; const O_BLOCK=10; const oTotalBlocks=Math.ceil(oTotalPagesNum /
                                            O_BLOCK); const oCurrentBlock=Math.floor((oCurrentPage - 1) / O_BLOCK);
                                            const oBlockStart=(b)=> b * O_BLOCK + 1;
                                            const oBlockEnd = (b) => Math.min(oBlockStart(b) + O_BLOCK - 1,
                                            oTotalPagesNum);

                                            // chỉ hiển thị gọn quanh khối hiện tại (±2 khối)
                                            const oWinStart = Math.max(0, oCurrentBlock - 2);
                                            const oWinEnd = Math.min(oTotalBlocks - 1, oCurrentBlock + 2);

                                            // giữ từ khóa tìm kiếm (đổi tên để tránh đụng)
                                            const orderQS = (typeof search !== 'undefined' && search) ? '&search=' +
                                            encodeURIComponent(search) : '';
                                            %>

                                            <nav aria-label="Order pagination">
                                                <ul class="pagination justify-content-center mt-3">

                                                    <!-- Prev page -->
                                                    <li class="page-item <%= oCurrentPage === 1 ? 'disabled' : '' %>">
                                                        <a class="page-link"
                                                            href="/admin/order?page=<%= Math.max(1, oCurrentPage - 1) %><%= orderQS %>"
                                                            aria-label="Previous">
                                                            <span aria-hidden="true">&laquo;</span>
                                                        </a>
                                                    </li>

                                                    <!-- Prev block (lùi 10 trang) -->
                                                    <li class="page-item <%= oCurrentBlock === 0 ? 'disabled' : '' %>">
                                                        <a class="page-link"
                                                            href="/admin/order?page=<%= Math.max(1, oBlockStart(oCurrentBlock) - O_BLOCK) %><%= orderQS %>"
                                                            aria-label="Prev 10">‹ 10</a>
                                                    </li>

                                                    <!-- First block -->
                                                    <% if (oWinStart> 0) { %>
                                                        <li
                                                            class="page-item <%= oCurrentBlock === 0 ? 'active' : '' %>">
                                                            <a class="page-link"
                                                                href="/admin/order?page=<%= oBlockStart(0) %><%= orderQS %>">
                                                                <%= oBlockStart(0) %>-<%= oBlockEnd(0) %>
                                                            </a>
                                                        </li>
                                                        <% if (oWinStart> 1) { %>
                                                            <li class="page-item disabled"><span
                                                                    class="page-link">…</span></li>
                                                            <% } %>
                                                                <% } %>

                                                                    <!-- Window around current block -->
                                                                    <% for (let b=oWinStart; b <=oWinEnd; b++) { %>
                                                                        <li
                                                                            class="page-item <%= b === oCurrentBlock ? 'active' : '' %>">
                                                                            <a class="page-link"
                                                                                href="/admin/order?page=<%= oBlockStart(b) %><%= orderQS %>">
                                                                                <%= oBlockStart(b) %>-<%= oBlockEnd(b)
                                                                                        %>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>

                                                                            <!-- Last block -->
                                                                            <% if (oWinEnd < oTotalBlocks - 1) { %>
                                                                                <% if (oWinEnd < oTotalBlocks - 2) { %>
                                                                                    <li class="page-item disabled"><span
                                                                                            class="page-link">…</span>
                                                                                    </li>
                                                                                    <% } %>
                                                                                        <li
                                                                                            class="page-item <%= oCurrentBlock === oTotalBlocks - 1 ? 'active' : '' %>">
                                                                                            <a class="page-link"
                                                                                                href="/admin/order?page=<%= oBlockStart(oTotalBlocks - 1) %><%= orderQS %>">
                                                                                                <%= oBlockStart(oTotalBlocks
                                                                                                    - 1) %>-<%=
                                                                                                        oBlockEnd(oTotalBlocks
                                                                                                        - 1) %>
                                                                                            </a>
                                                                                        </li>
                                                                                        <% } %>

                                                                                            <!-- Next block (tiến 10 trang) -->
                                                                                            <li
                                                                                                class="page-item <%= oCurrentBlock >= oTotalBlocks - 1 ? 'disabled' : '' %>">
                                                                                                <a class="page-link"
                                                                                                    href="/admin/order?page=<%= Math.min(oTotalPagesNum, oBlockEnd(oCurrentBlock) + 1) %><%= orderQS %>"
                                                                                                    aria-label="Next 10">10
                                                                                                    ›</a>
                                                                                            </li>

                                                                                            <!-- Next page -->
                                                                                            <li
                                                                                                class="page-item <%= oCurrentPage === oTotalPagesNum ? 'disabled' : '' %>">
                                                                                                <a class="page-link"
                                                                                                    href="/admin/order?page=<%= Math.min(oTotalPagesNum, oCurrentPage + 1) %><%= orderQS %>"
                                                                                                    aria-label="Next">
                                                                                                    <span
                                                                                                        aria-hidden="true">&raquo;</span>
                                                                                                </a>
                                                                                            </li>

                                                </ul>
                                            </nav>



                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>