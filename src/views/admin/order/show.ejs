<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="MinhVuong&QuocHuynh - Dự án laptopshop" />
    <meta name="author" content="MinhVuong&QuocHuynh" />
    <title>Manage Orders - LaptopShop</title>

    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- POLISH: đồng bộ với dashboard/header/sidenav -->
    <style>
        :root {
            --brand: #4f8cff;
            --glass: rgba(255, 255, 255, .06);
            --glass-bd: rgba(255, 255, 255, .10);
            --muted: #aeb6c8;
        }

        body.sb-nav-fixed {
            background: radial-gradient(1200px 800px at 10% 10%, #10172a 0%, #0a0f1f 45%, #080c18 100%) fixed;
        }

        .page-title {
            color: #eef2ff;
            font-weight: 800;
            letter-spacing: .2px;
        }

        /* Card “glass” */
        .card.glass {
            border: 1px solid var(--glass-bd);
            border-radius: 18px;
            background: linear-gradient(180deg, rgba(255, 255, 255, .05), rgba(255, 255, 255, .02));
            color: #e8ecff;
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            box-shadow: 0 10px 26px rgba(0, 0, 0, .25);
        }

        /* Giữ markup cũ .bg-primary nhưng làm trong suốt để đồng bộ */
        .card-header.bg-primary {
            background: transparent !important;
            color: #cbd5ff !important;
            font-weight: 700;
            border-bottom: 1px solid var(--glass-bd);
        }

        /* ===== Bảng (theo yêu cầu của bạn) ===== */
        .table thead.table-light {
            background: rgba(255, 255, 255, .06);
            color: #161d41;
        }

        .table {
            color: #e8ecff;
        }

        .table-hover tbody tr:hover {
            background: rgba(255, 255, 255, .05);
        }

        .badge.bg-secondary {
            background: rgba(255, 255, 255, .15) !important;
        }

        /* Pagination */
        .pagination .page-link {
            background: rgba(255, 255, 255, .06);
            border: 1px solid var(--glass-bd);
            color: #e5e7eb;
        }

        .pagination .page-item.active .page-link,
        .pagination .page-link.active {
            background: rgba(79, 140, 255, .22);
            border-color: rgba(79, 140, 255, .35);
            color: #fff;
        }

        .breadcrumb {
            background: transparent;
        }

        .breadcrumb a {
            color: #cbd5ff;
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        /* Nút xem đơn hàng mềm hơn */
        .btn-warning.text-white {
            background: linear-gradient(135deg, rgba(79, 140, 255, .8), rgba(139, 92, 246, .7)) !important;
            border: 1px solid rgba(255, 255, 255, .15) !important;
            border-radius: 12px;
        }

        .btn-warning.text-white:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
        }
    </style>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <!-- Tiêu đề -->
                            <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
                                <h1 class="page-title h3"><i class="fa-solid fa-receipt me-2"></i> Quản lý đơn hàng</h1>
                            </div>

                            <!-- Breadcrumb -->
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active text-light">Orders</li>
                            </ol>

                            <!-- Bảng Orders -->
                            <div class="card glass border-0 rounded-3">
                                <div class="card-header bg-primary text-white fw-semibold">
                                    <i class="fa-solid fa-table me-2"></i> Danh sách đơn hàng
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table align-middle table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Người dùng</th>
                                                    <th>Tổng tiền</th>
                                                    <th>Trạng thái</th>
                                                    <th>Payment Method</th>
                                                    <th>Payment Status</th>
                                                    <th class="text-center">Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% orders.forEach(function (order) { %>
                                                    <tr>
                                                        <td><span class="badge bg-secondary">
                                                                <%= order.id %>
                                                            </span></td>
                                                        <td>
                                                            <%= order?.user?.fullName ?? "" %>
                                                        </td>
                                                        <td>
                                                            <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                                currency: 'VND' }) .format(order.totalPrice) %>
                                                        </td>
                                                        <td>
                                                            <% if (order.status==='PENDING' ) { %>
                                                                <span class="badge bg-warning text-dark">Chờ xử
                                                                    lý</span>
                                                                <% } else if (order.status==='CONFIRMED' ) { %>
                                                                    <span class="badge bg-info text-dark">Đã xác nhận
                                                                        đơn</span>
                                                                    <% } else if (order.status==='SHIPPING' ) { %>
                                                                        <span class="badge bg-primary">Đang vận
                                                                            chuyển</span>
                                                                        <% } else if (order.status==='OUT_FOR_DELIVERY'
                                                                            ) { %>
                                                                            <span class="badge bg-secondary">Đang giao
                                                                                hàng</span>
                                                                            <% } else if (order.status==='DELIVERED' ) {
                                                                                %>
                                                                                <span class="badge bg-success">Đã giao
                                                                                    hàng</span>
                                                                                <% } else if (order.status==='CANCELED'
                                                                                    ) { %>
                                                                                    <span class="badge bg-danger">Đã
                                                                                        hủy</span>
                                                                                    <% } else { %>
                                                                                        <span
                                                                                            class="badge bg-light text-dark">
                                                                                            <%= order.status %>
                                                                                        </span>
                                                                                        <% } %>
                                                        </td>
                                                        <td>
                                                            <%= order.paymentMethod %>
                                                        </td>
                                                        <td>
                                                            <% if(order.paymentStatus==='PAID' ) { %>
                                                                <span class="badge bg-success">Đã thanh toán</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary">Chưa thanh
                                                                        toán</span>
                                                                    <% } %>
                                                        </td>
                                                        <td class="text-center">
                                                            <form action="/admin/order/<%= order.id %>" method="get">
                                                                <button type="submit"
                                                                    class="btn btn-sm btn-warning text-white">
                                                                    <i class="fa-solid fa-eye"></i> Xem đơn hàng
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Pagination (block ranges 1–10, 11–20, ...) -->
                                    <% const totalPagesNum=Number(totalPages) || 1; const currentPage=Number(page) || 1;
                                        const BLOCK=10; const totalBlocks=Math.ceil(totalPagesNum / BLOCK); const
                                        currentBlock=Math.floor((currentPage - 1) / BLOCK); const blockStart=(b)=> b *
                                        BLOCK + 1;
                                        const blockEnd = (b) => Math.min(blockStart(b) + BLOCK - 1, totalPagesNum);

                                        // chỉ hiển thị gọn quanh khối hiện tại (±2 khối)
                                        const winStart = Math.max(0, currentBlock - 2);
                                        const winEnd = Math.min(totalBlocks - 1, currentBlock + 2);
                                        %>

                                        <nav aria-label="Order pagination">
                                            <ul class="pagination justify-content-center mt-3">

                                                <!-- Prev page -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="/admin/order?page=<%= Math.max(1, currentPage - 1) %>"
                                                        aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>

                                                <!-- Prev block (lùi 10 trang) -->
                                                <li class="page-item <%= currentBlock === 0 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="/admin/order?page=<%= Math.max(1, blockStart(currentBlock) - BLOCK) %>"
                                                        aria-label="Prev 10">‹ 10</a>
                                                </li>

                                                <!-- First block -->
                                                <% if (winStart> 0) { %>
                                                    <li class="page-item <%= currentBlock === 0 ? 'active' : '' %>">
                                                        <a class="page-link"
                                                            href="/admin/order?page=<%= blockStart(0) %>">
                                                            <%= blockStart(0) %>-<%= blockEnd(0) %>
                                                        </a>
                                                    </li>
                                                    <% if (winStart> 1) { %>
                                                        <li class="page-item disabled"><span class="page-link">…</span>
                                                        </li>
                                                        <% } %>
                                                            <% } %>

                                                                <!-- Window around current block -->
                                                                <% for (let b=winStart; b <=winEnd; b++) { %>
                                                                    <li
                                                                        class="page-item <%= b === currentBlock ? 'active' : '' %>">
                                                                        <a class="page-link"
                                                                            href="/admin/order?page=<%= blockStart(b) %>">
                                                                            <%= blockStart(b) %>-<%= blockEnd(b) %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>

                                                                        <!-- Last block -->
                                                                        <% if (winEnd < totalBlocks - 1) { %>
                                                                            <% if (winEnd < totalBlocks - 2) { %>
                                                                                <li class="page-item disabled"><span
                                                                                        class="page-link">…</span></li>
                                                                                <% } %>
                                                                                    <li
                                                                                        class="page-item <%= currentBlock === totalBlocks - 1 ? 'active' : '' %>">
                                                                                        <a class="page-link"
                                                                                            href="/admin/order?page=<%= blockStart(totalBlocks - 1) %>">
                                                                                            <%= blockStart(totalBlocks -
                                                                                                1) %>-<%=
                                                                                                    blockEnd(totalBlocks
                                                                                                    - 1) %>
                                                                                        </a>
                                                                                    </li>
                                                                                    <% } %>

                                                                                        <!-- Next block (tiến 10 trang) -->
                                                                                        <li
                                                                                            class="page-item <%= currentBlock >= totalBlocks - 1 ? 'disabled' : '' %>">
                                                                                            <a class="page-link"
                                                                                                href="/admin/order?page=<%= Math.min(totalPagesNum, blockEnd(currentBlock) + 1) %>"
                                                                                                aria-label="Next 10">10
                                                                                                ›</a>
                                                                                        </li>

                                                                                        <!-- Next page -->
                                                                                        <li
                                                                                            class="page-item <%= currentPage === totalPagesNum ? 'disabled' : '' %>">
                                                                                            <a class="page-link"
                                                                                                href="/admin/order?page=<%= Math.min(totalPagesNum, currentPage + 1) %>"
                                                                                                aria-label="Next">
                                                                                                <span
                                                                                                    aria-hidden="true">&raquo;</span>
                                                                                            </a>
                                                                                        </li>

                                            </ul>
                                        </nav>


                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>