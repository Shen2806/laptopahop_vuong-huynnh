    <script>
        (function () {
            // Đường dẫn hiện tại, bỏ slash thừa ở cuối
            const path = location.pathname.replace(/\/+$/, '');

            // Chỉ lấy các link <a> trong sidenav (loại bỏ button logout)
            const links = Array.from(document.querySelectorAll('#sidenavAccordion a.nav-link'));

            // Bỏ active cũ (nếu có)
            links.forEach(a => a.classList.remove('active'));

            // Chấm điểm: href dài nhất mà là tiền tố của path sẽ thắng
            const best = links
                .map(a => {
                    const href = (a.getAttribute('href') || '').replace(/\/+$/, '');
                    const match =
                        href &&
                        (
                            path === href ||                          // khớp chính xác
                            (href !== '/' && path.startsWith(href))   // hoặc là tiền tố (loại '/')
                        );
                    return { a, href, score: match ? href.length : -1 };
                })
                .reduce((acc, cur) => (cur.score > acc.score ? cur : acc), { score: -1 });

            if (best.score >= 0) best.a.classList.add('active');
        })();
    </script>
