        </nav>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <meta id="rbac-data" data-perms="<%= encodeURIComponent(JSON.stringify(perms || [])) %>"
        data-role="<%= encodeURIComponent(String(roleName || '')) %>">

    <!-- Inject perms/role từ server -->
    <script>
        (function () {
            const meta = document.getElementById('rbac-data') || { dataset: {} };

            // Giải mã dữ liệu từ server
            let __perms = [];
            try {
                __perms = JSON.parse(decodeURIComponent(meta.dataset.perms || '%5B%5D')); // [] mặc định
            } catch (_) { __perms = []; }
            const __role = decodeURIComponent(meta.dataset.role || '');

            // Expose nếu cần dùng nơi khác
            window.__perms = __perms;
            window.__role = __role;

            const can = (p) =>
                __perms.includes('*') ||
                __perms.includes(p) ||
                __perms.includes(p.split('.')[0] + '.*');

            // Ẩn item theo data-perm
            document.querySelectorAll('[data-perm]').forEach(el => {
                const need = el.getAttribute('data-perm');
                if (!can(need)) el.style.display = 'none';
            });

            // Ẩn nhóm nếu không có quyền bất kỳ
            document.querySelectorAll('[data-perm-any]').forEach(el => {
                const list = (el.getAttribute('data-perm-any') || '')
                    .split(',').map(s => s.trim()).filter(Boolean);
                if (!list.some(can)) el.style.display = 'none';
            });
        })();
    </script>


    <!-- Tự động đánh dấu active menu -->
    <script>
        (function () {
            // Đường dẫn hiện tại, bỏ slash thừa ở cuối
            const path = location.pathname.replace(/\/+$/, '');

            // Chỉ lấy các link <a> trong sidenav (loại bỏ button logout)
            const links = Array.from(document.querySelectorAll('#sidenavAccordion a.nav-link'));

            // Bỏ active cũ (nếu có)
            links.forEach(a => a.classList.remove('active'));

            // Chấm điểm: href dài nhất mà là tiền tố của path sẽ thắng
            const best = links
                .map(a => {
                    const href = (a.getAttribute('href') || '').replace(/\/+$/, '');
                    const match =
                        href &&
                        (
                            path === href ||                          // khớp chính xác
                            (href !== '/' && path.startsWith(href))   // hoặc là tiền tố (loại '/')
                        );
                    return { a, href, score: match ? href.length : -1 };
                })
                .reduce((acc, cur) => (cur.score > acc.score ? cur : acc), { score: -1 });

            if (best.score >= 0) best.a.classList.add('active');
        })();
    </script>
    <!-- Socket.io - Thông báo tin nhắn mới -->
    <script>
        (function () {

            // reset hiển thị
            document.querySelectorAll('[data-admin-badge="chat"]').forEach(el => {
                el.textContent = "0";
                el.classList.add("d-none");
            });
            // Dùng 1 socket duy nhất cho toàn trang
            const socket = window.__adminSocket || (window.__adminSocket = io());

            // Tránh bind trùng khi script được load lại
            if (window.__adminNotifyBound) return;
            window.__adminNotifyBound = true;

            socket.on("connect", () => socket.emit("join-admin-room"));

            function incAllBadges() {
                document.querySelectorAll('[data-admin-badge="chat"]').forEach(el => {
                    const cur = parseInt(el.textContent || "0", 10) + 1;
                    el.textContent = String(cur);
                    el.classList.remove("d-none");
                });
                const $sound = document.getElementById("adminChatSound");
                if ($sound) { try { $sound.currentTime = 0; $sound.play().catch(() => { }); } catch { } }
            }

            // Lắng nghe 1 lần duy nhất
            socket.on("notify:chat_message", incAllBadges);
        })();
    </script>
    <!-- Socket.io - Thông báo tin nhắn mới (phiên bản nâng cao: tránh trùng lặp, âm thanh) -->
    <script>
        (function () {
            const socket = window.__adminSocket || (window.__adminSocket = io());
            if (window.__adminNavBound) return; window.__adminNavBound = true;

            const seen = new Set();
            const audio = document.getElementById('adminChatSound');

            function incTotalBadge() {
                document.querySelectorAll('[data-admin-badge="chat"]').forEach(el => {
                    const cur = parseInt(el.textContent || "0", 10) + 1;
                    el.textContent = String(cur);
                    el.classList.remove("d-none");
                });
            }
            function playDing() {
                if (!audio) return;
                try { audio.currentTime = 0; audio.play().catch(() => { }); } catch { }
            }

            socket.on("connect", () => socket.emit("join-admin-room"));

            socket.off("notify:chat_message");
            socket.on("notify:chat_message", ({ mid }) => {
                if (mid && seen.has(mid)) return;
                if (mid) seen.add(mid);
                incTotalBadge();
                playDing();                 // ⬅️ âm thanh
            });

            // số unread chính xác theo từng phiên (nếu bạn cần)
            socket.off("admin:session_unread");
            socket.on("admin:session_unread", ({ sessionId, unread }) => {
                // có thể cập nhật số ngay tại ô phiên tương ứng nếu muốn
            });
        })();
    </script>

