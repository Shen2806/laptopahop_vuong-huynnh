<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="MinhVuong&QuocHuynh - Dự án laptopshop" />
    <meta name="author" content="MinhVuong&QuocHuynh" />
    <title>Manage Blogs - LaptopShop</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <style>
        :root {
            --brand: #4f8cff;
            --glass: rgba(255, 255, 255, .06);
            --glass-bd: rgba(255, 255, 255, .10);
        }

        body.sb-nav-fixed {
            background: radial-gradient(1200px 800px at 10% 10%, #10172a 0%, #0a0f1f 45%, #080c18 100%) fixed;
        }

        .page-title {
            color: #eef2ff;
            font-weight: 800;
            letter-spacing: .2px;
        }

        .breadcrumb {
            background: transparent;
        }

        .breadcrumb a {
            color: #cbd5ff;
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        .card.glass {
            border: 1px solid var(--glass-bd);
            border-radius: 18px;
            background: linear-gradient(180deg, rgba(255, 255, 255, .05), rgba(255, 255, 255, .02));
            color: #e8ecff;
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            box-shadow: 0 10px 26px rgba(0, 0, 0, .25);
        }

        .card-header.bg-primary {
            background: transparent !important;
            color: #cbd5ff !important;
            font-weight: 700;
            border-bottom: 1px solid var(--glass-bd);
        }

        /* Bảng — đồng bộ với các trang khác */
        .table thead.table-light {
            background: rgba(255, 255, 255, .06);
            color: #161d41;
        }

        .table {
            color: #e8ecff;
        }

        .table-hover tbody tr:hover {
            background: rgba(255, 255, 255, .05);
        }

        .btn-primary {
            border-radius: 12px;
        }

        .btn-warning,
        .btn-danger {
            border-radius: 10px;
        }

        /*form xóa*/
        .popover .btn {
            padding: .25rem .5rem;
        }

        .popover {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .15);
        }
    </style>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>

        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <!-- Tiêu đề -->
                            <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
                                <h1 class="page-title h3"><i class="fa-solid fa-blog me-2"></i> Quản lý Blogs</h1>
                                <a href="/admin/create-blog" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Thêm Blog
                                </a>
                            </div>

                            <!-- Breadcrumb -->
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active text-light">Blogs</li>
                            </ol>

                            <!-- Bảng Blogs -->
                            <div class="card glass shadow-sm border-0 rounded-3">
                                <div class="card-header bg-primary text-white fw-semibold">
                                    <i class="fa-solid fa-table me-2"></i> Danh sách Blog
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table align-middle table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Tiêu đề</th>
                                                    <th>Tác giả</th>
                                                    <th>Thời gian</th>
                                                    <th class="text-center">Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (blogs.length> 0) { %>
                                                    <% blogs.forEach(blog=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= blog.title %>
                                                            </td>
                                                            <td>
                                                                <%= blog.author %>
                                                            </td>
                                                            <td>
                                                                <%= blog.createdAt.toLocaleDateString() %>
                                                            </td>
                                                            <td class="text-center">
                                                                <div class="d-flex justify-content-center gap-2">
                                                                    <a href="/admin/edit-blog/<%= blog.id %>"
                                                                        class="btn btn-sm btn-warning">
                                                                        <i class="fas fa-edit"></i> Sửa
                                                                    </a>
                                                                    <form id="del-form-<%= blog.id %>"
                                                                        action="/admin/delete-blog/<%= blog.id %>"
                                                                        method="POST" class="d-inline">
                                                                        <button type="button"
                                                                            class="btn btn-sm btn-danger js-popconfirm"
                                                                            data-popconfirm="Bạn có chắc muốn xoá?"
                                                                            data-form="#del-form-<%= blog.id %>">
                                                                            <i class="fas fa-trash"></i> Xóa
                                                                        </button>
                                                                    </form>

                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="4" class="text-center text-muted">No
                                                                        blogs available</td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
        // form xóa blog với popconfirm
        <script>
            (function () {
                // Khởi tạo popover cho tất cả nút có .js-popconfirm
                document.querySelectorAll('.js-popconfirm').forEach(function (btn) {
                    var msg = btn.getAttribute('data-popconfirm') || 'Bạn có chắc muốn xoá?';
                    new bootstrap.Popover(btn, {
                        html: true,
                        trigger: 'click',
                        placement: 'top',
                        container: 'body',
                        sanitize: false,
                        content:
                            '<div class="popconfirm-body">' +
                            '<div class="mb-2">' + msg + '</div>' +
                            '<div class="d-flex gap-2">' +
                            '<button type="button" class="btn btn-sm btn-secondary popconfirm-cancel">Hủy</button>' +
                            '<button type="button" class="btn btn-sm btn-danger popconfirm-ok">Xóa</button>' +
                            '</div>' +
                            '</div>'
                    });

                    // Mở cái này thì đóng các popover khác
                    btn.addEventListener('show.bs.popover', function () {
                        document.querySelectorAll('.js-popconfirm').forEach(function (other) {
                            if (other !== btn) {
                                var inst = bootstrap.Popover.getInstance(other);
                                inst && inst.hide();
                            }
                        });
                    });
                });

                // Delegation: click trong popover
                document.addEventListener('click', function (e) {
                    var okBtn = e.target.closest('.popconfirm-ok');
                    var cancelBtn = e.target.closest('.popconfirm-cancel');

                    if (!okBtn && !cancelBtn) return;

                    var tip = e.target.closest('.popover');
                    if (!tip) return;

                    var popoverId = tip.id; // id của popover hiện tại
                    var trigger = document.querySelector('[aria-describedby="' + popoverId + '"]');
                    if (!trigger) return;

                    var pop = bootstrap.Popover.getInstance(trigger);

                    if (cancelBtn) { pop && pop.hide(); return; }

                    if (okBtn) {
                        // tìm form từ data-form (fallback: form gần nhất)
                        var sel = trigger.getAttribute('data-form');
                        var form = sel ? document.querySelector(sel) : trigger.closest('form');
                        if (form) form.submit();
                        pop && pop.hide();
                    }
                });

                // Click ra ngoài -> đóng popover
                document.addEventListener('click', function (e) {
                    document.querySelectorAll('.js-popconfirm').forEach(function (btn) {
                        var inst = bootstrap.Popover.getInstance(btn);
                        if (!inst) return;
                        var tip = inst.getTipElement && inst.getTipElement();
                        if (tip && !btn.contains(e.target) && !tip.contains(e.target)) inst.hide();
                    });
                });
            })();
        </script>


</body>

</html>