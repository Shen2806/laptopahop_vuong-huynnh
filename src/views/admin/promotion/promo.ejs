<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <title>Quản lý khuyến mãi - LaptopShop</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <style>
        :root {
            --brand: #4f8cff;
            --glass: rgba(255, 255, 255, .06);
            --glass-bd: rgba(255, 255, 255, .10);
        }

        body.sb-nav-fixed {
            background: radial-gradient(1200px 800px at 10% 10%, #10172a 0%, #0a0f1f 45%, #080c18 100%) fixed;
        }

        .page-title {
            color: #eef2ff;
            font-weight: 800;
            letter-spacing: .2px;
        }

        .breadcrumb {
            background: transparent;
        }

        .breadcrumb a {
            color: #cbd5ff;
            text-decoration: none;
        }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

        /* Glass card */
        .card.glass {
            border: 1px solid var(--glass-bd);
            border-radius: 18px;
            background: linear-gradient(180deg, rgba(255, 255, 255, .05), rgba(255, 255, 255, .02));
            color: #e8ecff;
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            box-shadow: 0 10px 26px rgba(0, 0, 0, .25);
        }

        .card-header.bg-primary,
        .card-header.bg-success {
            background: transparent !important;
            color: #cbd5ff !important;
            font-weight: 700;
            border-bottom: 1px solid var(--glass-bd);
        }

        /* Form controls */
        .form-label {
            color: #e8ecff;
            font-weight: 500;
        }

        .form-select,
        .form-control {
            background: rgba(255, 255, 255, .06);
            color: #e8ecff;
            border: 1px solid var(--glass-bd);
            border-radius: 12px;
        }

        .form-select:focus,
        .form-control:focus {
            color: #cc6161;
            background: rgba(255, 255, 255, .09);
            border-color: rgba(79, 140, 255, .4);
            box-shadow: none;
        }

        /* Buttons */
        .btn-success,
        .btn-secondary,
        .btn-warning,
        .btn-danger {
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, .15);
        }

        .btn-success {
            background: linear-gradient(135deg, rgba(79, 140, 255, .85), rgba(139, 92, 246, .75));
        }

        .btn-success:hover {
            filter: brightness(1.05);
            transform: translateY(-1px);
        }

        /* ===== Bảng (theo yêu cầu) ===== */
        .table thead.table-light {
            background: rgba(255, 255, 255, .06);
            color: #161d41;
        }

        .table {
            color: #e8ecff;
        }

        .table-hover tbody tr:hover {
            background: rgba(255, 255, 255, .05);
        }

        .badge.bg-info {
            background: rgba(59, 130, 246, .2) !important;
            color: #cfd8ff !important;
        }

        .fw-bold.text-danger {
            color: #ffb4b4 !important;
        }
    </style>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">

                            <!-- Tiêu đề -->
                            <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
                                <h1 class="page-title h3">
                                    <i class="fa-solid fa-tags me-2"></i> Quản lý khuyến mãi
                                </h1>
                            </div>

                            <!-- Breadcrumb -->
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active text-light">Khuyến mãi</li>
                            </ol>

                            <!-- Form thêm khuyến mãi -->
                            <div class="card glass shadow-sm border-0 rounded-3 mb-4">
                                <div class="card-header bg-success text-white fw-semibold">
                                    <i class="fa-solid fa-plus me-2"></i> Thêm khuyến mãi mới
                                </div>
                                <div class="card-body">
                                    <form action="/admin/promo/add" method="post" class="row g-3 align-items-end">
                                        <div class="col-md-6">
                                            <label class="form-label">Chọn sản phẩm</label>
                                            <select name="productId" class="form-select" required>
                                                <% allProducts.forEach(p=> { %>
                                                    <option value="<%= p.id %>">
                                                        <%= p.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label">% Giảm giá</label>
                                            <input type="number" class="form-control" name="discount" min="1" max="90"
                                                required>
                                        </div>
                                        <div class="col-md-2">
                                            <button type="submit" class="btn btn-success w-100">
                                                <i class="fa-solid fa-plus-circle me-1"></i> Thêm
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <!-- Danh sách sản phẩm đang khuyến mãi -->
                            <div class="card glass shadow-sm border-0 rounded-3">
                                <div class="card-header bg-primary text-white fw-semibold">
                                    <i class="fa-solid fa-list me-2"></i> Danh sách sản phẩm khuyến mãi
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table align-middle table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Tên sản phẩm</th>
                                                    <th>Giá gốc</th>
                                                    <th>% Giảm</th>
                                                    <th>Giá sau KM</th>
                                                    <th class="text-center">Thao tác</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (promoProducts.length> 0) { %>
                                                    <% promoProducts.forEach(p=> { %>
                                                        <tr>
                                                            <td>
                                                                <%= p.name %>
                                                            </td>
                                                            <td>
                                                                <%= p.price.toLocaleString('vi-VN') %> ₫
                                                            </td>
                                                            <td>
                                                                <span class="badge bg-info text-dark">
                                                                    <%= p.discount %>%
                                                                </span>
                                                            </td>
                                                            <td class="fw-bold text-danger">
                                                                <%= (p.price * (100 - p.discount) /
                                                                    100).toLocaleString('vi-VN') %> ₫
                                                            </td>
                                                            <td class="text-center">
                                                                <!-- Form sửa -->
                                                                <form action="/admin/promo/update/<%= p.id %>"
                                                                    method="post"
                                                                    class="d-inline-flex align-items-center">
                                                                    <input type="number" name="discount" min="1"
                                                                        max="90" value="<%= p.discount %>"
                                                                        class="form-control form-control-sm me-2"
                                                                        style="width: 80px;">
                                                                    <button type="submit"
                                                                        class="btn btn-warning btn-sm text-white">
                                                                        <i class="fa-solid fa-pen-to-square"></i> Cập
                                                                        nhật
                                                                    </button>
                                                                </form>

                                                                <!-- Form xóa -->
                                                                <form action="/admin/promo/delete/<%= p.id %>"
                                                                    method="post" class="d-inline">
                                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                                        <i class="fa-solid fa-trash"></i> Xóa
                                                                    </button>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="5" class="text-center text-muted">
                                                                        <i class="fa-solid fa-circle-info"></i> Chưa có
                                                                        sản phẩm khuyến mãi
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>
</body>

</html>