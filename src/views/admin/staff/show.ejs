<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="LaptopShop - Staff" />
    <meta name="author" content="LaptopShop" />
    <title>Quản lý nhân viên - LaptopShop</title>

    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/admin/css/staff/show.css">
    <!-- POLISH: đồng bộ theme -->
    <style>

    </style>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav'); -%>

                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <!-- Tiêu đề -->
                            <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
                                <h1 class="page-title h3"><i class="fa-solid fa-id-badge me-2"></i> Quản lý nhân viên
                                </h1>
                                <form class="d-flex gap-2" action="/admin/staff" method="get" role="search">
                                    <input class="form-control" type="search" name="search"
                                        placeholder="Tìm theo tên, email, SĐT, địa chỉ hoặc vai trò..."
                                        value="<%= typeof search !== 'undefined' ? search : '' %>"
                                        aria-label="Search staff" style="min-width:260px" />
                                    <button class="btn btn-brand shadow-sm" type="submit">
                                        <i class="fa-solid fa-magnifying-glass me-1"></i> Tìm
                                    </button>
                                    <% if (search) { %>
                                        <a class="btn btn-soft" href="/admin/staff">
                                            <i class="fa-solid fa-xmark me-1"></i> Xóa lọc
                                        </a>
                                        <% } %>
                                </form>
                                <a href="/admin/create-staff" class="btn btn-brand shadow-sm">
                                    <i class="fa-solid fa-user-plus me-1"></i> Thêm nhân viên
                                </a>
                            </div>

                            <!-- Breadcrumb -->
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active text-light">Staff</li>
                            </ol>

                            <!-- Bảng Staff -->
                            <div class="card glass border-0 rounded-3">
                                <div class="card-header">
                                    <i class="fa-solid fa-table me-2"></i> Danh sách Nhân viên
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table align-middle table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tên</th>
                                                    <th>Email</th>
                                                    <th>Vai trò</th> <!-- NEW -->
                                                    <th>Địa chỉ</th>
                                                    <th class="text-center">Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (Array.isArray(users) && users.length) { %>
                                                    <% users.forEach(function (user) { %>
                                                        <tr>
                                                            <td>
                                                                <span class="badge bg-secondary">
                                                                    <%= user.id %>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <%= user.fullName %>
                                                            </td>
                                                            <td>
                                                                <%= user.username %>
                                                            </td>

                                                            <!-- Vai trò -->
                                                            <td>
                                                                <% // Lấy tên role (object Role, string, hay roleName)
                                                                    let _rawRole=user && (user.role && (user.role.name
                                                                    || user.role)) || user.roleName || "" ;
                                                                    _rawRole=String(_rawRole || "" ).toUpperCase(); //
                                                                    const ROLE_LABELS={ "ADMIN" : "ADMIN"
                                                                    , "OPS_MANAGER" : "Quản lý vận hành" , "OPS_STAFF"
                                                                    : "NV vận hành" , "SALES_SUPPORT"
                                                                    : "Hỗ trợ bán hàng" , "MARKETING_CONTENT"
                                                                    : "Marketing nội dung" }; const
                                                                    ROLE_BADGE_CLASS={ "ADMIN" : "bg-danger"
                                                                    , "OPS_MANAGER" : "bg-warning text-dark"
                                                                    , "OPS_STAFF" : "bg-info text-dark"
                                                                    , "SALES_SUPPORT" : "bg-primary"
                                                                    , "MARKETING_CONTENT" : "bg-success" }; const
                                                                    _label=ROLE_LABELS[_rawRole] || (_rawRole || "-" );
                                                                    const _cls=ROLE_BADGE_CLASS[_rawRole]
                                                                    || "bg-secondary" ; %>
                                                                    <span class="badge <%= _cls %>">
                                                                        <%= _label %>
                                                                    </span>
                                                            </td>

                                                            <td>
                                                                <%= user.address %>
                                                            </td>

                                                            <td>
                                                                <div class="d-flex justify-content-center gap-2">
                                                                    <form action="/admin/view-staff/<%= user.id %>"
                                                                        method="get">
                                                                        <button type="submit"
                                                                            class="btn btn-soft btn-sm">
                                                                            <i class="fa-solid fa-eye"></i> Xem
                                                                        </button>
                                                                    </form>
                                                                    <form action="/admin/delete-staff/<%= user.id %>"
                                                                        method="post"
                                                                        onsubmit="return confirm('Bạn có chắc muốn xóa nhân viên này không?')">
                                                                        <button type="submit"
                                                                            class="btn btn-sm btn-danger">
                                                                            <i class="fa-solid fa-trash"></i> Xóa
                                                                        </button>
                                                                    </form>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <!-- tăng colspan lên 6 vì có thêm cột Vai trò -->
                                                                    <td colspan="6" class="text-center text-muted">Chưa
                                                                        có dữ liệu</td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <% const queryStr=search ? '&search=' + encodeURIComponent(search) : '' ; %>
                                        <!-- Pagination -->
                                        <nav aria-label="Staff pagination">
                                            <ul class="pagination justify-content-center mt-3">
                                                <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="/admin/staff?page=<%= page - 1 %><%= queryStr %>"
                                                        aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>

                                                <% for (var i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= page === i ? 'active' : '' %>">
                                                        <a class="page-link"
                                                            href="/admin/staff?page=<%= i %><%= queryStr %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <li
                                                            class="page-item <%= page === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="/admin/staff?page=<%= page + 1 %><%= queryStr %>"
                                                                aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                            </a>
                                                        </li>
                                            </ul>
                                        </nav>

                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include('../layout/footer'); -%>
                </div>
        </div>

        <!-- Bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>