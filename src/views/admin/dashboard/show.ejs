        }

        body.sb-nav-fixed {
            background: radial-gradient(1200px 800px at 10% 10%, #10172a 0%, #0a0f1f 45%, #080c18 100%) fixed;
        }

        /* Breadcrumb + title */
        .page-title {
            color: #eef2ff;
            font-weight: 800;
            letter-spacing: .2px;
        }

        .breadcrumb {
            background: transparent;
        }

        /* Revenue banner */
        .revenue-banner {
            background: linear-gradient(135deg, rgba(79, 140, 255, .18), rgba(139, 92, 246, .18));
            color: #e7ecff;
            border: 1px solid var(--glass-border);
            border-radius: 16px;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, .35), inset 0 0 0 1px rgba(255, 255, 255, .04);
        }

        .revenue-banner small {
            color: var(--muted);
        }

        /* Cards */
        .dash-card {
            position: relative;
            overflow: hidden;
            border: 1px solid var(--glass-border);
            border-radius: 18px;
            color: #e8ecff;
            background: linear-gradient(180deg, rgba(255, 255, 255, .06), rgba(255, 255, 255, .03));
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, .28);
            transition: transform .18s ease, box-shadow .18s ease;
        }

        .dash-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 18px 40px rgba(0, 0, 0, .34);
        }

        .dash-card .card-body {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .dash-card .stat {
            font-size: .95rem;
            opacity: .85;
        }

        .dash-icon {
            width: 52px;
            height: 52px;
            border-radius: 14px;
            display: grid;
            place-items: center;
            font-size: 1.2rem;
            background: var(--glass);
            border: 1px solid var(--glass-border);
        }

        .dash-link {
            color: #e7ecff;
            text-decoration: none;
            font-weight: 600;
        }

        .dash-link:hover {
            color: #fff;
        }

        /* Thematic accents */
        .accent-primary {
            background: linear-gradient(135deg, rgba(79, 140, 255, .24), rgba(56, 189, 248, .12));
        }

        .accent-danger {
            background: linear-gradient(135deg, rgba(244, 63, 94, .22), rgba(251, 146, 60, .12));
        }

        .accent-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, .22), rgba(34, 197, 94, .12));
        }

        /* Info blocks */
        .glass-card {
            border: 1px solid var(--glass-border);
            border-radius: 18px;
            background: linear-gradient(180deg, rgba(255, 255, 255, .05), rgba(255, 255, 255, .02));
            color: #e8ecff;
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            box-shadow: 0 10px 26px rgba(0, 0, 0, .25);
        }

        .glass-card .card-header {
            background: transparent;
            color: #cbd5ff;
            font-weight: 700;
            border-bottom: 1px solid var(--glass-border);
        }

        .glass-card .list-group-item {
            background: transparent;
            color: #e8ecff;
            border-color: var(--glass-border);
        }

        /* Chart container */
        .chart-wrap {
            height: 440px;
            padding: 12px;
            background: rgba(255, 255, 255, .03);
            border: 1px solid var(--glass-border);
            border-radius: 18px;
        }

        /* Buttons soft */
        .btn-soft {
            background: rgba(255, 255, 255, .06);
            border: 1px solid var(--glass-border);
            color: #e7ecff;
            border-radius: 12px;
        }

        .btn-soft:hover {
            background: rgba(255, 255, 255, .10);
            color: #fff;
        }
    </style>
</head>

