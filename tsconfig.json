{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "config/*": [
        "./src/config/*"
      ],
      "controllers/*": [
        "./src/controllers/*"
      ],
      "models/*": [
        "./src/models/*"
      ],
      "routes/*": [
        "./src/routers/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "typeRoots": [
        "./node_modules/@types",
        "./types"
      ]
    }
  }
}