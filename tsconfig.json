{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "config/*": [
        "./src/config/*"
      ],
      "controllers/*": [
        "./src/controllers/*"
      ],
      "models/*": [
        "./src/models/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ], // <— CHỈNH: nếu thư mục là 'routes'
      "services/*": [
        "./src/services/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src"
  ]
}